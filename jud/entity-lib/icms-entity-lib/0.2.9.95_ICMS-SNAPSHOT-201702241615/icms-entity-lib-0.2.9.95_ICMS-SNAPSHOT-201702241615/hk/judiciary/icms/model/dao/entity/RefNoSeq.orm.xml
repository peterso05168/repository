<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.RefNoSeq" access="FIELD">
     <table name="tref_no_seq" />

     <attributes>
        <id name="refNoSeqId">
            <column name="ref_no_seq_id" />
            <generated-value strategy="TABLE" generator="TREF_NO_SEQ_SEQ" />
            <table-generator name="TREF_NO_SEQ_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tref_no_seq_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="refDate">
            <column name="ref_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="seqNo">
            <column name="seq_no" />
        </basic>

        <basic name="seqDate">
            <column name="seq_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="refNoSeqType">
            <column name="ref_no_seq_type" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="compsCourt" fetch="LAZY">
        <join-column name="comps_court_id" referenced-column-name="comps_court_id" />
    </many-to-one>

    <many-to-one name="caseType" fetch="LAZY">
        <join-column name="case_type_id" referenced-column-name="case_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
