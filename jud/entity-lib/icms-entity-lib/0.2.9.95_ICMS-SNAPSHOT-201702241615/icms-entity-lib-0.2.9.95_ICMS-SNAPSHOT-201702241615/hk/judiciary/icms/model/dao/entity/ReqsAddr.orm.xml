<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.ReqsAddr" access="FIELD">
     <table name="treqs_addr" />

     <attributes>
        <id name="reqsAddrId">
            <column name="reqs_addr_id" />
            <generated-value strategy="TABLE" generator="TREQS_ADDR_SEQ" />
            <table-generator name="TREQS_ADDR_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="treqs_addr_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="addrLine1">
            <column name="addr_line_1" />
        </basic>

        <basic name="addrLine2">
            <column name="addr_line_2" />
        </basic>

        <basic name="addrLine3">
            <column name="addr_line_3" />
        </basic>

        <basic name="fgnAddrFlag">
            <column name="fgn_addr_flag" />
        </basic>

        <basic name="lon">
            <column name="lon" />
        </basic>

        <basic name="lat">
            <column name="lat" />
        </basic>

        <basic name="addrLine2Chin">
            <column name="addr_line_2_chin" />
        </basic>

        <basic name="addrLine3Chin">
            <column name="addr_line_3_chin" />
        </basic>

        <basic name="addrInImage">
            <column name="addr_in_image" />
        </basic>

        <basic name="priAddrFlag">
            <column name="pri_addr_flag" />
        </basic>

        <basic name="actAddrFlag">
            <column name="act_addr_flag" />
        </basic>

        <basic name="addrLine1Chin">
            <column name="addr_line_1_chin" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="blfDist" fetch="LAZY">
        <join-column name="blf_dist_id" referenced-column-name="blf_dist_id" />
    </many-to-one>

    <many-to-one name="reqs" fetch="LAZY">
        <join-column name="reqs_id" referenced-column-name="reqs_id" />
    </many-to-one>

    <many-to-one name="blfOffice" fetch="LAZY">
        <join-column name="blf_office_id" referenced-column-name="blf_office_id" />
    </many-to-one>

    <many-to-one name="hkRgn" fetch="LAZY">
        <join-column name="hk_rgn_id" referenced-column-name="hk_rgn_id" />
    </many-to-one>

    <many-to-one name="hkDist" fetch="LAZY">
        <join-column name="hk_dist_id" referenced-column-name="hk_dist_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="blfTask"  mapped-by="reqsAddr" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
