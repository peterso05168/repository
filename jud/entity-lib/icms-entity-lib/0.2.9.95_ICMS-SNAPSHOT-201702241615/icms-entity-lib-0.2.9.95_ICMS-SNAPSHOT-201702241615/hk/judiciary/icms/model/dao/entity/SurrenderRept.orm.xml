<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.SurrenderRept" access="FIELD">
     <table name="tsurrender_rept" />

     <attributes>
        <id name="surrenderReptId">
            <column name="surrender_rept_id" />
            <generated-value strategy="TABLE" generator="TSURRENDER_REPT_SEQ" />
            <table-generator name="TSURRENDER_REPT_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tsurrender_rept_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="surrenderReptNo">
            <column name="surrender_rept_no" />
        </basic>

        <basic name="surrenderReptIssueDate">
            <column name="surrender_rept_issue_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="ordrHrnDate">
            <column name="ordr_hrn_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="ordrJjoGivenName">
            <column name="ordr_jjo_given_name" />
        </basic>

        <basic name="reptDtl">
            <column name="rept_dtl" />
        </basic>

        <basic name="ordrJjoSurname">
            <column name="ordr_jjo_surname" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="hrnDtl" fetch="LAZY">
        <join-column name="hrn_dtl_id" referenced-column-name="hrn_dtl_id" />
    </many-to-one>

    <many-to-one name="compsCourt" fetch="LAZY">
        <join-column name="comps_court_id" referenced-column-name="comps_court_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="surrenderDoc"  mapped-by="surrenderRept" fetch="LAZY" />
    <one-to-many name="surrenderReptToPartcp"  mapped-by="surrenderRept" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
