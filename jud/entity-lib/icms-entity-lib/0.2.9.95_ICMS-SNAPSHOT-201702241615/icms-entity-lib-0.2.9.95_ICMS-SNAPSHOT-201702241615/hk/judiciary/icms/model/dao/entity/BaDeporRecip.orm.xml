<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BaDeporRecip" access="FIELD">
     <table name="tba_depor_recip" />

     <attributes>
        <id name="baDeporRecipId">
            <column name="ba_depor_recip_id" />
            <generated-value strategy="TABLE" generator="TBA_DEPOR_RECIP_SEQ" />
            <table-generator name="TBA_DEPOR_RECIP_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tba_depor_recip_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="baRegAssoActiveFlag">
            <column name="ba_reg_asso_active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="compsCourt" fetch="LAZY">
        <join-column name="comps_court_id" referenced-column-name="comps_court_id" />
    </many-to-one>

    <many-to-one name="pymtPty" fetch="LAZY">
        <join-column name="pymt_pty_id" referenced-column-name="pymt_pty_id" />
    </many-to-one>

    <many-to-one name="baReg" fetch="LAZY">
        <join-column name="ba_reg_id" referenced-column-name="ba_reg_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="baRegItem"  mapped-by="baDeporRecip" fetch="LAZY" />
    <one-to-many name="amendRecipPlan"  mapped-by="baDeporRecip" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
