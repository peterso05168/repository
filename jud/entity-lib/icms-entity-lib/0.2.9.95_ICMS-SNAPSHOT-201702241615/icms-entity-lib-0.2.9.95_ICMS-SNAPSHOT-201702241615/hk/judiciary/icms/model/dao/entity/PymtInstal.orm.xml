<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PymtInstal" access="FIELD">
     <table name="tpymt_instal" />

     <attributes>
        <id name="pymtInstalId">
            <column name="pymt_instal_id" />
            <generated-value strategy="TABLE" generator="TPYMT_INSTAL_SEQ" />
            <table-generator name="TPYMT_INSTAL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tpymt_instal_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="instalNo">
            <column name="instal_no" />
        </basic>

        <basic name="instalDueDate">
            <column name="instal_due_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="pymtSchd" fetch="LAZY">
        <join-column name="pymt_schd_id" referenced-column-name="pymt_schd_id" />
    </many-to-one>

    <many-to-one name="pymtStatusType" fetch="LAZY">
        <join-column name="pymt_status_type_id" referenced-column-name="pymt_status_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="epayOnlineTxn"  mapped-by="instal" fetch="LAZY" />
    <one-to-many name="pymtInTxnItemHist"  mapped-by="instal" fetch="LAZY" />
    <one-to-many name="pymtInItem"  mapped-by="pymtInstal" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
