<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PolBailReg" access="FIELD">
     <table name="tpol_bail_reg" />

     <attributes>
        <id name="polBailId">
            <column name="pol_bail_id" />
            <generated-value strategy="TABLE" generator="TPOL_BAIL_REG_SEQ" />
            <table-generator name="TPOL_BAIL_REG_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tpol_bail_reg_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="polBailRegTrnfDt">
            <column name="pol_bail_reg_trnf_dt" />
        </basic>

        <basic name="magCourt">
            <column name="mag_court" />
        </basic>

        <basic name="polDiv">
            <column name="pol_div" />
        </basic>

        <basic name="totalBailAmt">
            <column name="total_bail_amt" />
        </basic>

        <basic name="bankTotalBailAmt">
            <column name="bank_total_bail_amt" />
        </basic>

        <basic name="verifFlag">
            <column name="verif_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->
    <one-to-many name="polBailRegItem"  mapped-by="polBail" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
