        </basic>

        <basic name="rptPolStaFlag">
            <column name="rpt_pol_sta_flag" />
        </basic>

        <basic name="rptPolStaFr">
            <column name="rpt_pol_sta_fr" />
        </basic>

        <basic name="rptPolStaTo">
            <column name="rpt_pol_sta_to" />
        </basic>

        <basic name="rptOnMonFlag">
            <column name="rpt_on_mon_flag" />
        </basic>

        <basic name="rptOnTueFlag">
            <column name="rpt_on_tue_flag" />
        </basic>

        <basic name="rptOnWedFlag">
            <column name="rpt_on_wed_flag" />
        </basic>

        <basic name="rptOnSatFlag">
            <column name="rpt_on_sat_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="informPolSta" fetch="LAZY">
        <join-column name="inform_pol_sta_id" referenced-column-name="rpt_pol_sta_id" />
    </many-to-one>

    <many-to-one name="stnceOrdr" fetch="LAZY">
        <join-column name="stnce_ordr_id" referenced-column-name="stnce_ordr_id" />
    </many-to-one>

    <many-to-one name="rptPolSta" fetch="LAZY">
        <join-column name="rpt_pol_sta_id" referenced-column-name="rpt_pol_sta_id" />
    </many-to-one>

    <many-to-one name="rptFreqType" fetch="LAZY">
        <join-column name="rpt_freq_type_id" referenced-column-name="rpt_freq_type_id" />
    </many-to-one>


