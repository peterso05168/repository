<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.McApps" access="FIELD">
     <table name="tmc_apps" />

     <attributes>
        <id name="mcAppsId">
            <column name="mc_apps_id" />
            <generated-value strategy="TABLE" generator="TMC_APPS_SEQ" />
            <table-generator name="TMC_APPS_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tmc_apps_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="msgToJjo">
            <column name="msg_to_jjo" />
        </basic>

        <basic name="appIntlNo">
            <column name="app_intl_no" />
        </basic>

        <basic name="appRecvDate">
            <column name="app_recv_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="allowAppInd">
            <column name="allow_app_ind" />
        </basic>

        <basic name="otherDir">
            <column name="other_dir" />
        </basic>

        <basic name="refuseAppInd">
            <column name="refuse_app_ind" />
        </basic>

        <basic name="rsnForRefusal">
            <column name="rsn_for_refusal" />
        </basic>

        <basic name="ordrDirInd">
            <column name="ordr_dir_ind" />
        </basic>

        <basic name="ordrDirFreeTxt">
            <column name="ordr_dir_free_txt" />
        </basic>

        <basic name="extensionEndDateInd">
            <column name="extension_end_date_ind" />
        </basic>

        <basic name="noOfWithinDay">
            <column name="no_of_within_day" />
        </basic>

        <basic name="extensionEndDate">
            <column name="extension_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="setDownForReviewInd">
            <column name="set_down_for_review_ind" />
        </basic>

        <basic name="hrnDateForReview">
            <column name="hrn_date_for_review" />
        </basic>

        <basic name="setDownForHrnInd">
            <column name="set_down_for_hrn_ind" />
        </basic>

        <basic name="hrnDateForHrn">
            <column name="hrn_date_for_hrn" />
        </basic>

        <basic name="applyTo">
            <column name="apply_to" />
        </basic>

        <basic name="arrangeHrn">
            <column name="arrange_hrn" />
        </basic>

        <basic name="dirOnAppealOfAbdntNoti">
            <column name="dir_on_appeal_of_abdnt_noti" />
        </basic>

        <basic name="status">
            <column name="status" />
        </basic>

        <basic name="relDocDrn">
            <column name="rel_doc_drn" />
        </basic>

        <basic name="tdltId">
            <column name="tdlt_id" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="relMcAppealReg" fetch="LAZY">
        <join-column name="rel_mc_appeal_reg_id" referenced-column-name="mc_appeal_reg_id" />
    </many-to-one>

    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>

    <many-to-one name="jjoProfile" fetch="LAZY">
        <join-column name="jjo_profile_id" referenced-column-name="jjo_profile_id" />
    </many-to-one>

    <many-to-one name="mcAppNatType" fetch="LAZY">
        <join-column name="mc_app_nat_type_id" referenced-column-name="mc_app_nat_type_id" />
    </many-to-one>

    <many-to-one name="mcAppStatusType" fetch="LAZY">
        <join-column name="mc_app_status_type_id" referenced-column-name="mc_app_status_type_id" />
    </many-to-one>

    <many-to-one name="mcAppReviewNatType" fetch="LAZY">
        <join-column name="mc_app_review_nat_type_id" referenced-column-name="mc_app_review_nat_type_id" />
    </many-to-one>

    <many-to-one name="doc" fetch="LAZY">
        <join-column name="doc_id" referenced-column-name="doc_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="mcAppAppl"  mapped-by="mcApps" fetch="LAZY" />
    <one-to-many name="mcAppAgstStnceOrdr"  mapped-by="mcApps" fetch="LAZY" />
    <one-to-many name="mcAppsCaseMap"  mapped-by="mcApps" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="hrnSchdIdForReview" fetch="LAZY">
        <join-column name="hrn_schd_id_for_review" referenced-column-name="hrn_schd_id" />
    </one-to-one>

    <one-to-one name="hrnSchdIdForHrn" fetch="LAZY">
        <join-column name="hrn_schd_id_for_hrn" referenced-column-name="hrn_schd_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
