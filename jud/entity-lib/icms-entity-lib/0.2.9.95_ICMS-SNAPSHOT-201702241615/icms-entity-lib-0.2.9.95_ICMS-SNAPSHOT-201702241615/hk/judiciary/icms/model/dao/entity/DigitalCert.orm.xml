<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.DigitalCert" access="FIELD">
     <table name="tdigital_cert" />

     <attributes>
        <id name="digitalCertId">
            <column name="digital_cert_id" />
            <generated-value strategy="TABLE" generator="TDIGITAL_CERT_SEQ" />
            <table-generator name="TDIGITAL_CERT_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tdigital_cert_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="digitalCertHsmId">
            <column name="digital_cert_hsm_id" />
        </basic>

        <basic name="valityRevokeDt">
            <column name="vality_revoke_dt" />
        </basic>

        <basic name="valityStartDt">
            <column name="vality_start_dt" />
        </basic>

        <basic name="digitalCertDesc">
            <column name="digital_cert_desc" />
        </basic>

        <basic name="valityEndDt">
            <column name="vality_end_dt" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="digitalCertType" fetch="LAZY">
        <join-column name="digital_cert_type_id" referenced-column-name="digital_cert_type_id" />
    </many-to-one>

    <many-to-one name="intlUserAc" fetch="LAZY">
        <join-column name="intl_user_ac_id" referenced-column-name="intl_user_ac_id" />
    </many-to-one>

    <many-to-one name="compsCourt" fetch="LAZY">
        <join-column name="comps_court_id" referenced-column-name="comps_court_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="affixDtl"  mapped-by="digitalCert" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
