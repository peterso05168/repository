<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.EccDtl" access="FIELD">
     <table name="tecc_dtl" />

     <attributes>
        <id name="eccDtlId">
            <column name="ecc_dtl_id" />
            <generated-value strategy="TABLE" generator="TECC_DTL_SEQ" />
            <table-generator name="TECC_DTL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tecc_dtl_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="dateOfDeath">
            <column name="date_of_death" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="dateOfAcdnt">
            <column name="date_of_acdnt" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="swdRptRefNo">
            <column name="swd_rpt_ref_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="eccAppNat" fetch="LAZY">
        <join-column name="ecc_app_nat_id" referenced-column-name="ecc_app_nat_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
