<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PymtAmt" access="FIELD">
     <table name="cpymt_amt" />

     <attributes>
        <id name="pymtAmtId">
            <column name="pymt_amt_id" />
            <generated-value strategy="TABLE" generator="CPYMT_AMT_SEQ" />
            <table-generator name="CPYMT_AMT_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="cpymt_amt_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="pymtAmt">
            <column name="pymt_amt" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="activeFlag">
            <column name="active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="pymtSubCd" fetch="LAZY">
        <join-column name="pymt_sub_cd_id" referenced-column-name="pymt_sub_cd_id" />
    </many-to-one>

    <many-to-one name="pymtAmtType" fetch="LAZY">
        <join-column name="pymt_amt_type_id" referenced-column-name="pymt_amt_type_id" />
    </many-to-one>

    <many-to-one name="curcyCd" fetch="LAZY">
        <join-column name="curcy_cd_id" referenced-column-name="curcy_cd_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="docPymt" fetch="LAZY">
        <join-column name="doc_pymt_id" referenced-column-name="doc_pymt_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
