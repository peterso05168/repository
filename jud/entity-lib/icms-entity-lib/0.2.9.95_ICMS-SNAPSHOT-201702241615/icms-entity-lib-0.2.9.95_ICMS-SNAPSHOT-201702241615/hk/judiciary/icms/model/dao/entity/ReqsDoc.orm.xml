<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.ReqsDoc" access="FIELD">
     <table name="treqs_doc" />

     <attributes>
        <id name="reqsDocId">
            <column name="reqs_doc_id" />
            <generated-value strategy="TABLE" generator="TREQS_DOC_SEQ" />
            <table-generator name="TREQS_DOC_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="treqs_doc_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="docSeqNo">
            <column name="doc_seq_no" />
        </basic>

        <basic name="prtFlag">
            <column name="prt_flag" />
        </basic>

        <basic name="actReqFlag">
            <column name="act_req_flag" />
        </basic>

        <basic name="rtnDocFlag">
            <column name="rtn_doc_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="doc" fetch="LAZY">
        <join-column name="doc_id" referenced-column-name="doc_id" />
    </many-to-one>

    <many-to-one name="blfTask" fetch="LAZY">
        <join-column name="blf_task_id" referenced-column-name="blf_task_id" />
    </many-to-one>

    <many-to-one name="blfReqs" fetch="LAZY">
        <join-column name="blf_reqs_id" referenced-column-name="reqs_id" />
    </many-to-one>

    <many-to-one name="blfDocStatusType" fetch="LAZY">
        <join-column name="blf_doc_status_type" referenced-column-name="blf_doc_status_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
