<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.MoneBailCond" access="FIELD">
     <table name="tmone_bail_cond" />

     <attributes>
        <id name="moneBailCondId">
            <column name="mone_bail_cond_id" />
            <generated-value strategy="TABLE" generator="TMONE_BAIL_COND_SEQ" />
            <table-generator name="TMONE_BAIL_COND_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tmone_bail_cond_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="bailFormRefNo">
            <column name="bail_form_ref_no" />
        </basic>

        <basic name="cashAmt">
            <column name="cash_amt" />
        </basic>

        <basic name="ownUndrtkingAmt">
            <column name="own_undrtking_amt" />
        </basic>

        <basic name="recvDate">
            <column name="recv_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="rtnDate">
            <column name="rtn_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="estreatDate">
            <column name="estreat_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="br" fetch="LAZY">
        <join-column name="br_id" referenced-column-name="br_id" />
    </many-to-one>

    <many-to-one name="bailAmtType" fetch="LAZY">
        <join-column name="bail_amt_type_id" referenced-column-name="bail_amt_type_id" />
    </many-to-one>

    <many-to-one name="partcpRole" fetch="LAZY">
        <join-column name="partcp_role_id" referenced-column-name="partcp_role_id" />
    </many-to-one>

    <many-to-one name="curcyCd" fetch="LAZY">
        <join-column name="curcy_cd_id" referenced-column-name="curcy_cd_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
