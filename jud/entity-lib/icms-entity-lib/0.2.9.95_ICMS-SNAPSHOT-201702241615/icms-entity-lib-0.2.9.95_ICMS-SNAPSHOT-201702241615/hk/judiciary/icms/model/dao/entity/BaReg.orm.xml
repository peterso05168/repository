<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BaReg" access="FIELD">
     <table name="tba_reg" />

     <attributes>
        <id name="baRegId">
            <column name="ba_reg_id" />
            <generated-value strategy="TABLE" generator="TBA_REG_SEQ" />
            <table-generator name="TBA_REG_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tba_reg_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="rmk">
            <column name="rmk" />
        </basic>

        <basic name="stnceOrdrId">
            <column name="stnce_ordr_id" />
        </basic>

        <basic name="caseId">
            <column name="case_id" />
        </basic>

        <basic name="deftSurname">
            <column name="deft_surname" />
        </basic>

        <basic name="deftGivenName">
            <column name="deft_given_name" />
        </basic>

        <basic name="brId">
            <column name="br_id" />
        </basic>

        <basic name="deftId">
            <column name="deft_id" />
        </basic>

        <basic name="deftOrgName">
            <column name="deft_org_name" />
        </basic>

        <basic name="remainBaAmt">
            <column name="remain_ba_amt" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="baType" fetch="LAZY">
        <join-column name="ba_type_id" referenced-column-name="ba_type_id" />
    </many-to-one>

    <many-to-one name="baRegStatus" fetch="LAZY">
        <join-column name="ba_reg_status_id" referenced-column-name="ba_reg_status_id" />
    </many-to-one>

    <many-to-one name="intmCase" fetch="LAZY">
        <join-column name="intm_case_id" referenced-column-name="intm_case_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="baRegItem"  mapped-by="baReg" fetch="LAZY" />
    <one-to-many name="unclBaBatItem"  mapped-by="baReg" fetch="LAZY" />
    <one-to-many name="baDeporRecip"  mapped-by="baReg" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
