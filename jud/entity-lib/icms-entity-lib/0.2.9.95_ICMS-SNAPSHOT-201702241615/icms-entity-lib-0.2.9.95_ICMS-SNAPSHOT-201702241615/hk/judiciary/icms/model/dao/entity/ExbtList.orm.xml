<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.ExbtList" access="FIELD">
     <table name="texbt_list" />

     <attributes>
        <id name="exbtId">
            <column name="exbt_id" />
            <generated-value strategy="TABLE" generator="TEXBT_LIST_SEQ" />
            <table-generator name="TEXBT_LIST_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="texbt_list_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="status">
            <column name="status" />
        </basic>

        <basic name="exbtDesc">
            <column name="exbt_desc" />
        </basic>

        <basic name="exbtValueAmt">
            <column name="exbt_value_amt" />
        </basic>

        <basic name="exbtRtnDate">
            <column name="exbt_rtn_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="nameOfRecip">
            <column name="name_of_recip" />
        </basic>

        <basic name="ordrIdOfConftOrdr">
            <column name="ordr_id_of_conft_ordr" />
        </basic>

        <basic name="conftOrdrDate">
            <column name="conft_ordr_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="exbtSubmitDate">
            <column name="exbt_submit_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="forfeitCashAmt">
            <column name="forfeit_cash_amt" />
        </basic>

        <basic name="lettPrtDate">
            <column name="lett_prt_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="pdRefNo">
            <column name="pd_ref_no" />
        </basic>

        <basic name="exhitbitNo">
            <column name="exhitbit_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>

    <many-to-one name="provByPartcpRole" fetch="LAZY">
        <join-column name="prov_by_partcp_role_id" referenced-column-name="partcp_role_id" />
    </many-to-one>

    <many-to-one name="rtnToPartcpRole" fetch="LAZY">
        <join-column name="rtn_to_partcp_role_id" referenced-column-name="partcp_role_id" />
    </many-to-one>

    <many-to-one name="exbtValueAmtCurcy" fetch="LAZY">
        <join-column name="exbt_value_amt_curcy_id" referenced-column-name="curcy_cd_id" />
    </many-to-one>

    <many-to-one name="forfeitCashAmtCurcy" fetch="LAZY">
        <join-column name="forfeit_cash_amt_curcy_id" referenced-column-name="curcy_cd_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="hrnAssoExbt"  mapped-by="exbt" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="prosExbt" fetch="LAZY">
        <join-column name="pros_exbt_id" referenced-column-name="pros_exbt_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
