<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.CalDate" access="FIELD">
     <table name="tcal_date" />

     <attributes>
        <id name="calId">
            <column name="cal_id" />
            <generated-value strategy="TABLE" generator="TCAL_DATE_SEQ" />
            <table-generator name="TCAL_DATE_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tcal_date_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="calDate">
            <column name="cal_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="wkdWkndHolidayInd">
            <column name="wkd_wknd_holiday_ind" />
        </basic>

        <basic name="holidayDesc">
            <column name="holiday_desc" />
        </basic>

        <basic name="holidayDescChin">
            <column name="holiday_desc_chin" />
        </basic>

        <basic name="holidayDescChinSimpl">
            <column name="holiday_desc_chin_simpl" />
        </basic>

        <basic name="sunFlag">
            <column name="sun_flag" />
        </basic>

        <basic name="satFlag">
            <column name="sat_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

