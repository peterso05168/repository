<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.ExtFunc" access="FIELD">
     <table name="text_func" />

     <attributes>
        <id name="extFuncId">
            <column name="ext_func_id" />
            <generated-value strategy="TABLE" generator="TEXT_FUNC_SEQ" />
            <table-generator name="TEXT_FUNC_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="text_func_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="extFuncName">
            <column name="ext_func_name" />
        </basic>

        <basic name="extFuncDesc">
            <column name="ext_func_desc" />
        </basic>

        <basic name="extFuncCd">
            <column name="ext_func_cd" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="proj" fetch="LAZY">
        <join-column name="proj_id" referenced-column-name="proj_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="extRoleToFunc"  mapped-by="extFunc" fetch="LAZY" />
    <one-to-many name="extFuncGrpToFunc"  mapped-by="extFunc" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
