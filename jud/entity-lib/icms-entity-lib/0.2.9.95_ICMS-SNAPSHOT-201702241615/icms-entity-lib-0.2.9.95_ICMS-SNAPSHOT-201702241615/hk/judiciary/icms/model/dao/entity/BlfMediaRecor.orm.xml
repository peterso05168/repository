<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BlfMediaRecor" access="FIELD">
     <table name="tblf_media_recor" />

     <attributes>
        <id name="blfMediaRecorId">
            <column name="blf_media_recor_id" />
            <generated-value strategy="TABLE" generator="TBLF_MEDIA_RECOR_SEQ" />
            <table-generator name="TBLF_MEDIA_RECOR_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tblf_media_recor_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="mediaRecorName">
            <column name="media_recor_name" />
        </basic>

        <basic name="mediaRecorDtlDesc">
            <column name="media_recor_dtl_desc" />
        </basic>

        <basic name="mediaRecorDt">
            <column name="media_recor_dt" />
        </basic>

        <basic name="uldDate">
            <column name="uld_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="seqNo">
            <column name="seq_no" />
        </basic>

        <basic name="mediaRecorPath">
            <column name="media_recor_path" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="blfAsgmnt" fetch="LAZY">
        <join-column name="blf_asgmnt_id" referenced-column-name="blf_asgmnt_id" />
    </many-to-one>

    <many-to-one name="szdInventItem" fetch="LAZY">
        <join-column name="szd_invent_item_id" referenced-column-name="szd_invent_item_id" />
    </many-to-one>

    <many-to-one name="uldByIntlUserAc" fetch="LAZY">
        <join-column name="uld_by_intl_user_ac_id" referenced-column-name="intl_user_ac_id" />
    </many-to-one>

    <many-to-one name="doc" fetch="LAZY">
        <join-column name="doc_id" referenced-column-name="doc_id" />
    </many-to-one>

    <many-to-one name="blfMediaType" fetch="LAZY">
        <join-column name="blf_media_type_id" referenced-column-name="blf_media_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="blfMsg"  mapped-by="mediaRecor" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
