<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PymtMethDtl" access="FIELD">
     <table name="tpymt_meth_dtl" />

     <attributes>
        <id name="pymtMethDtlId">
            <column name="pymt_meth_dtl_id" />
            <generated-value strategy="TABLE" generator="TPYMT_METH_DTL_SEQ" />
            <table-generator name="TPYMT_METH_DTL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tpymt_meth_dtl_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="pymtMethAmt">
            <column name="pymt_meth_amt" />
        </basic>

        <basic name="pymtMethDtlDesc">
            <column name="pymt_meth_dtl_desc" />
        </basic>

        <basic name="pymtMethDtlTxnDesc">
            <column name="pymt_meth_dtl_txn_desc" />
        </basic>

        <basic name="pymtTrnfDate">
            <column name="pymt_trnf_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="pymtInTxn" fetch="LAZY">
        <join-column name="pymt_in_txn_id" referenced-column-name="pymt_in_txn_id" />
    </many-to-one>

    <many-to-one name="curcyCd" fetch="LAZY">
        <join-column name="curcy_cd_id" referenced-column-name="curcy_cd_id" />
    </many-to-one>

    <many-to-one name="pymtMeth" fetch="LAZY">
        <join-column name="pymt_meth_id" referenced-column-name="pymt_meth_id" />
    </many-to-one>

    <many-to-one name="pymtOutTxn" fetch="LAZY">
        <join-column name="pymt_out_txn_id" referenced-column-name="pymt_out_txn_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="dishcqReg"  mapped-by="pymtMethDtl" fetch="LAZY" />

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
