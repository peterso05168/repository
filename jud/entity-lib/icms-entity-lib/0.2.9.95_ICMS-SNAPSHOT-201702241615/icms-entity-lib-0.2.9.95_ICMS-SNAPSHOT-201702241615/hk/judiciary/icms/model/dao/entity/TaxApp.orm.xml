<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.TaxApp" access="FIELD">
     <table name="ttax_app" />

     <attributes>
        <id name="taxAppId">
            <column name="tax_app_id" />
            <generated-value strategy="TABLE" generator="TTAX_APP_SEQ" />
            <table-generator name="TTAX_APP_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="ttax_app_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="taxFeeClaim">
            <column name="tax_fee_claim" />
        </basic>

        <basic name="totalClaimInd">
            <column name="total_claim_ind" />
        </basic>

        <basic name="taxOrdrDate">
            <column name="tax_ordr_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="hrnRslt" fetch="LAZY">
        <join-column name="hrn_rslt_id" referenced-column-name="hrn_rslt_id" />
    </many-to-one>

    <many-to-one name="relOrdr" fetch="LAZY">
        <join-column name="rel_ordr_id" referenced-column-name="ordr_id" />
    </many-to-one>

    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="taxBillOfCost"  mapped-by="taxApp" fetch="LAZY" />
    <one-to-many name="taxHrn"  mapped-by="taxApp" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
