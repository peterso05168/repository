<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.DeftDtl" access="FIELD">
     <table name="tdeft_dtl" />

     <attributes>
        <id name="deftDtlId">
            <column name="deft_dtl_id" />
            <generated-value strategy="TABLE" generator="TDEFT_DTL_SEQ" />
            <table-generator name="TDEFT_DTL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tdeft_dtl_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="arrtDate">
            <column name="arrt_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="firstTimeApprInCourtDate">
            <column name="first_time_appr_in_court_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="trafficLbltyType" fetch="LAZY">
        <join-column name="traffic_lblty_type_id" referenced-column-name="traffic_lblty_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="partcpRole" fetch="LAZY">
        <join-column name="partcp_role_id" referenced-column-name="partcp_role_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
