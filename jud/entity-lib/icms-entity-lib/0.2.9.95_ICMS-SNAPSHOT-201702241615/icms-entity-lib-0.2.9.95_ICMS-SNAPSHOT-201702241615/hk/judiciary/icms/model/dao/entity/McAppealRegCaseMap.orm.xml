<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.McAppealRegCaseMap" access="FIELD">
     <table name="tmc_appeal_reg_case_map" />

     <attributes>
        <id name="mcAppealRegCaseMapId">
            <column name="mc_appeal_reg_case_map_id" />
            <generated-value strategy="TABLE" generator="TMC_APPEAL_REG_CASE_MAP_SEQ" />
            <table-generator name="TMC_APPEAL_REG_CASE_MAP_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tmc_appeal_reg_case_map_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="status">
            <column name="status" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="mcAppealReg" fetch="LAZY">
        <join-column name="mc_appeal_reg_id" referenced-column-name="mc_appeal_reg_id" />
    </many-to-one>

    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="mcAppealRegAppellant"  mapped-by="mcAppealRegCaseMap" fetch="LAZY" />
    <one-to-many name="mcAppealRegStnceOrdr"  mapped-by="mcAppealRegCaseMap" fetch="LAZY" />
    <one-to-many name="mcAppealRegCaseDoc"  mapped-by="mcAppealRegCaseMap" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
