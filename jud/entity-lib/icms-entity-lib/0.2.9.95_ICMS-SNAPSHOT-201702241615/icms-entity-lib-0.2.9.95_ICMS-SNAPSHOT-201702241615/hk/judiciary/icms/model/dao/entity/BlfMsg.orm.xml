<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BlfMsg" access="FIELD">
     <table name="tblf_msg" />

     <attributes>
        <id name="blfMsgId">
            <column name="blf_msg_id" />
            <generated-value strategy="TABLE" generator="TBLF_MSG_SEQ" />
            <table-generator name="TBLF_MSG_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tblf_msg_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="msgLogDt">
            <column name="msg_log_dt" />
        </basic>

        <basic name="msgSendDt">
            <column name="msg_send_dt" />
        </basic>

        <basic name="msgBody">
            <column name="msg_body" />
        </basic>

        <basic name="lat">
            <column name="lat" />
        </basic>

        <basic name="lon">
            <column name="lon" />
        </basic>

        <basic name="altd">
            <column name="altd" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="mediaRecor" fetch="LAZY">
        <join-column name="media_recor_id" referenced-column-name="blf_media_recor_id" />
    </many-to-one>

    <many-to-one name="msgFrStaff" fetch="LAZY">
        <join-column name="msg_fr_staff" referenced-column-name="intl_user_ac_id" />
    </many-to-one>

    <many-to-one name="msgToStaff" fetch="LAZY">
        <join-column name="msg_to_staff" referenced-column-name="intl_user_ac_id" />
    </many-to-one>

    <many-to-one name="msgType" fetch="LAZY">
        <join-column name="msg_type_id" referenced-column-name="msg_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
