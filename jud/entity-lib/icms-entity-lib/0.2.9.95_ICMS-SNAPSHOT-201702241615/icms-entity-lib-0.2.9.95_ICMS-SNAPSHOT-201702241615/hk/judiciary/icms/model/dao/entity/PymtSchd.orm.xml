<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PymtSchd" access="FIELD">
     <table name="tpymt_schd" />

     <attributes>
        <id name="pymtSchdId">
            <column name="pymt_schd_id" />
            <generated-value strategy="TABLE" generator="TPYMT_SCHD_SEQ" />
            <table-generator name="TPYMT_SCHD_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tpymt_schd_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="pymtSchdDesc">
            <column name="pymt_schd_desc" />
        </basic>

        <basic name="pymtSchdNo">
            <column name="pymt_schd_no" />
        </basic>

        <basic name="pymtSchdType">
            <column name="pymt_schd_type" />
        </basic>

        <basic name="pymtSchdCourtSys">
            <column name="pymt_schd_court_sys" />
        </basic>

        <basic name="pymtSchdYr">
            <column name="pymt_schd_yr" />
        </basic>

        <basic name="genMode">
            <column name="gen_mode" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->
    <one-to-many name="pymtInstal"  mapped-by="pymtSchd" fetch="LAZY" />
    <one-to-many name="pymtOrdr"  mapped-by="pymtSchd" fetch="LAZY" />
    <one-to-many name="pymtSchdDfltStnce"  mapped-by="pymtSchd" fetch="LAZY" />
    <one-to-many name="pymtReqs"  mapped-by="pymtSchd" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="origPymtSchd" fetch="LAZY">
        <join-column name="orig_pymt_schd_id" referenced-column-name="pymt_schd_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
