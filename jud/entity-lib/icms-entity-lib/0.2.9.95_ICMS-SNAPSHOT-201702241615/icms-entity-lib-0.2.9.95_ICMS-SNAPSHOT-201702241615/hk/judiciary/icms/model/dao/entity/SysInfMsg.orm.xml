<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.SysInfMsg" access="FIELD">
     <table name="csys_inf_msg" />

     <attributes>
        <id name="sysInfMsgId">
            <column name="sys_inf_msg_id" />
            <generated-value strategy="TABLE" generator="CSYS_INF_MSG_SEQ" />
            <table-generator name="CSYS_INF_MSG_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="csys_inf_msg_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="msgNat">
            <column name="msg_nat" />
        </basic>

        <basic name="sysInfMsgCd">
            <column name="sys_inf_msg_cd" />
        </basic>

        <basic name="sysInfMsgDesc">
            <column name="sys_inf_msg_desc" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="activeFlag">
            <column name="active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="sysInfMsgType" fetch="LAZY">
        <join-column name="sys_inf_msg_type_id" referenced-column-name="sys_inf_msg_type_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
