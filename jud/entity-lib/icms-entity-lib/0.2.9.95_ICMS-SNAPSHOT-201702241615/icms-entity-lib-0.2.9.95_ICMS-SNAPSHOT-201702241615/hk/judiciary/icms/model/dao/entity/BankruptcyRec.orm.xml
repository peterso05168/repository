<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BankruptcyRec" access="FIELD">
     <table name="tbankruptcy_rec" />

     <attributes>
        <id name="bankruptcyRecId">
            <column name="bankruptcy_rec_id" />
            <generated-value strategy="TABLE" generator="TBANKRUPTCY_REC_SEQ" />
            <table-generator name="TBANKRUPTCY_REC_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tbankruptcy_rec_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="status">
            <column name="status" />
        </basic>

        <basic name="caseNo">
            <column name="case_no" />
        </basic>

        <basic name="idNo">
            <column name="id_no" />
        </basic>

        <basic name="busRegNo">
            <column name="bus_reg_no" />
        </basic>

        <basic name="name">
            <column name="name" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->
    <one-to-many name="execReqs"  mapped-by="bankruptcyRec" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
