<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.ReptSeq" access="FIELD">
     <table name="trept_seq" />

     <attributes>
        <id name="reptSeqId">
            <column name="rept_seq_id" />
            <generated-value strategy="TABLE" generator="TREPT_SEQ_SEQ" />
            <table-generator name="TREPT_SEQ_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="trept_seq_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="reptSeqYr">
            <column name="rept_seq_yr" />
        </basic>

        <basic name="reptNoSeqNo">
            <column name="rept_no_seq_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="centre" fetch="LAZY">
        <join-column name="centre_id" referenced-column-name="centre_id" />
    </many-to-one>

    <many-to-one name="pymtCatCd" fetch="LAZY">
        <join-column name="pymt_cat_cd_id" referenced-column-name="pymt_cat_cd_id" />
    </many-to-one>

    <many-to-one name="pymtWs" fetch="LAZY">
        <join-column name="pymt_ws_id" referenced-column-name="pymt_ws_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
