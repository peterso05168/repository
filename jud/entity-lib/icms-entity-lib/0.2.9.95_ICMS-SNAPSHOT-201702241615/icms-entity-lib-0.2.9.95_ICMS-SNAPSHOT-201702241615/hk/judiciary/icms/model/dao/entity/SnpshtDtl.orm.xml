<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.SnpshtDtl" access="FIELD">
     <table name="tsnpsht_dtl" />

     <attributes>
        <id name="snpshtDtlId">
            <column name="snpsht_dtl_id" />
            <generated-value strategy="TABLE" generator="TSNPSHT_DTL_SEQ" />
            <table-generator name="TSNPSHT_DTL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tsnpsht_dtl_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="snpshtLabel">
            <column name="snpsht_label" />
        </basic>

        <basic name="snpshtYr">
            <column name="snpsht_yr" />
        </basic>

        <basic name="snpshtMonth">
            <column name="snpsht_month" />
        </basic>

        <basic name="snpshtValue">
            <column name="snpsht_value" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="snpshtMap" fetch="LAZY">
        <join-column name="snpsht_map_id" referenced-column-name="snpsht_map_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="snpshtAmendHist"  mapped-by="snpshtDtl" fetch="LAZY" />
    <one-to-many name="snpshtOth001Dtl"  mapped-by="snpshtDtl" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="snpshtCwtDtl"  mapped-by="snpshtDtl" fetch="LAZY" />

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
