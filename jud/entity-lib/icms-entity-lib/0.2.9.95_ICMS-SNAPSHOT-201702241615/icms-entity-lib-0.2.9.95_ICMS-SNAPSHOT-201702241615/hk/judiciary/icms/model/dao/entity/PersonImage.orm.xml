<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PersonImage" access="FIELD">
     <table name="tperson_image" />

     <attributes>
        <id name="personImageId">
            <column name="person_image_id" />
            <generated-value strategy="TABLE" generator="TPERSON_IMAGE_SEQ" />
            <table-generator name="TPERSON_IMAGE_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tperson_image_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="fileSize">
            <column name="file_size" />
        </basic>

        <basic name="personImage">
            <column name="person_image" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="person" fetch="LAZY">
        <join-column name="person_id" referenced-column-name="person_id" />
    </many-to-one>

    <many-to-one name="personImageType" fetch="LAZY">
        <join-column name="person_image_type_id" referenced-column-name="person_image_type_id" />
    </many-to-one>

    <many-to-one name="imageFmt" fetch="LAZY">
        <join-column name="image_fmt_id" referenced-column-name="image_fmt_id" />
    </many-to-one>

    <many-to-one name="imageUldUser" fetch="LAZY">
        <join-column name="image_uld_user_id" referenced-column-name="ext_user_ac_id" />
    </many-to-one>

    <many-to-one name="imageCapUser" fetch="LAZY">
        <join-column name="image_cap_user_id" referenced-column-name="intl_user_ac_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
