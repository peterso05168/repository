<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PerslPartcr" access="FIELD">
     <table name="cpersl_partcr" />

     <attributes>
        <id name="perslPartcrId">
            <column name="persl_partcr_id" />
            <generated-value strategy="TABLE" generator="CPERSL_PARTCR_SEQ" />
            <table-generator name="CPERSL_PARTCR_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="cpersl_partcr_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="personPartcrDesc">
            <column name="person_partcr_desc" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="activeFlag">
            <column name="active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="personPartcrType" fetch="LAZY">
        <join-column name="person_partcr_type_id" referenced-column-name="person_partcr_type_id" />
    </many-to-one>

    <many-to-one name="person" fetch="LAZY">
        <join-column name="person_id" referenced-column-name="person_id" />
    </many-to-one>

    <many-to-one name="skillSubcatCd" fetch="LAZY">
        <join-column name="skill_subcat_cd" referenced-column-name="skill_subcat_cd" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
