<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.SysInfRec" access="FIELD">
     <table name="tsys_inf_rec" />

     <attributes>
        <id name="sysInfRecId">
            <column name="sys_inf_rec_id" />
            <generated-value strategy="TABLE" generator="TSYS_INF_REC_SEQ" />
            <table-generator name="TSYS_INF_REC_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tsys_inf_rec_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="seqNo">
            <column name="seq_no" />
        </basic>

        <basic name="extRefNo">
            <column name="ext_ref_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="sysInfBat" fetch="LAZY">
        <join-column name="sys_inf_bat_id" referenced-column-name="sys_inf_bat_id" />
    </many-to-one>

    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="sysInfErr"  mapped-by="sysInfRec" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="sysInfStatus" fetch="LAZY">
        <join-column name="sys_inf_status_id" referenced-column-name="sys_inf_status_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
