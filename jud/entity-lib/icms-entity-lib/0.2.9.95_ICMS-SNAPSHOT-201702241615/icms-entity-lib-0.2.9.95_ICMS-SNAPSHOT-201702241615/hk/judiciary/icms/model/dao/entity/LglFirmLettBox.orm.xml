            <table-generator name="TLGL_FIRM_LETT_BOX_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tlgl_firm_lett_box_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
