            <table-generator name="TTAX_CLAIM_IRD_REF_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="ttax_claim_ird_ref_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="typeOfRef">
            <column name="type_of_ref" />
        </basic>

        <basic name="pdRefNo">
            <column name="pd_ref_no" />
        </basic>


        <version name="version">
