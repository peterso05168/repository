<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BailCond" access="FIELD">
     <table name="tbail_cond" />

     <attributes>
        <id name="bailCondId">
            <column name="bail_cond_id" />
            <generated-value strategy="TABLE" generator="TBAIL_COND_SEQ" />
            <table-generator name="TBAIL_COND_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tbail_cond_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="bailCondSeqNo">
            <column name="bail_cond_seq_no" />
        </basic>

        <basic name="bailCondCont">
            <column name="bail_cond_cont" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="bailCondType" fetch="LAZY">
        <join-column name="bail_cond_type_id" referenced-column-name="bail_cond_type_id" />
    </many-to-one>

    <many-to-one name="br" fetch="LAZY">
        <join-column name="br_id" referenced-column-name="br_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
