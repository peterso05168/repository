<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.DocFolio" access="FIELD">
     <table name="tdoc_folio" />

     <attributes>
        <id name="docFolioId">
            <column name="doc_folio_id" />
            <generated-value strategy="TABLE" generator="TDOC_FOLIO_SEQ" />
            <table-generator name="TDOC_FOLIO_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tdoc_folio_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="folioNo">
            <column name="folio_no" />
        </basic>

        <basic name="folioSuff">
            <column name="folio_suff" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="doc" fetch="LAZY">
        <join-column name="doc_id" referenced-column-name="doc_id" />
    </many-to-one>

    <many-to-one name="subFlr" fetch="LAZY">
        <join-column name="sub_flr_id" referenced-column-name="sub_flr_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="phyCaseFileDocMove"  mapped-by="docFolio" fetch="LAZY" />
    <one-to-many name="phyCaseFileDocReqs"  mapped-by="docFlr" fetch="LAZY" />
    <one-to-many name="verifOfDocImageReqs"  mapped-by="docFolio" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
