<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.IntmCase" access="FIELD">
     <table name="tintm_case" />

     <attributes>
        <id name="intmCaseId">
            <column name="intm_case_id" />
            <generated-value strategy="TABLE" generator="TINTM_CASE_SEQ" />
            <table-generator name="TINTM_CASE_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tintm_case_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="caseCourtSys">
            <column name="case_court_sys" />
        </basic>

        <basic name="caseType">
            <column name="case_type" />
        </basic>

        <basic name="caseYr">
            <column name="case_yr" />
        </basic>

        <basic name="caseSerNo">
            <column name="case_ser_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->
    <one-to-many name="baReg"  mapped-by="intmCase" fetch="LAZY" />
    <one-to-many name="pymtInItem"  mapped-by="intmCase" fetch="LAZY" />
    <one-to-many name="pymtOutItem"  mapped-by="intmCase" fetch="LAZY" />
    <one-to-many name="pymtPty"  mapped-by="intmCase" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
