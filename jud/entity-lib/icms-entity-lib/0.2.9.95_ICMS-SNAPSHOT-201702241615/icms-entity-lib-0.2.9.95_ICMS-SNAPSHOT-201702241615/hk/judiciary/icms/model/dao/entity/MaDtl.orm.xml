<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.MaDtl" access="FIELD">
     <table name="tma_dtl" />

     <attributes>
        <id name="maDtlId">
            <column name="ma_dtl_id" />
            <generated-value strategy="TABLE" generator="TMA_DTL_SEQ" />
            <table-generator name="TMA_DTL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tma_dtl_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="ptyAggrByDecisOtherDesc">
            <column name="pty_aggr_by_decis_other_desc" />
        </basic>

        <basic name="chapDesc">
            <column name="chap_desc" />
        </basic>

        <basic name="underSect">
            <column name="under_sect" />
        </basic>

        <basic name="subsect">
            <column name="subsect" />
        </basic>

        <basic name="chap">
            <column name="chap" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </one-to-one>

    <one-to-one name="ptyAggrByDecis" fetch="LAZY">
        <join-column name="pty_aggr_by_decis_id" referenced-column-name="pty_aggr_by_decis_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
