<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.FpTkt" access="FIELD">
     <table name="tfp_tkt" />

     <attributes>
        <id name="fpTktId">
            <column name="fp_tkt_id" />
            <generated-value strategy="TABLE" generator="TFP_TKT_SEQ" />
            <table-generator name="TFP_TKT_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tfp_tkt_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="tktAmt">
            <column name="tkt_amt" />
        </basic>

        <basic name="dueDate">
            <column name="due_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="tktDemandNo">
            <column name="tkt_demand_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="tktDemandType" fetch="LAZY">
        <join-column name="tkt_demand_type_id" referenced-column-name="tkt_demand_type_id" />
    </many-to-one>

    <many-to-one name="pymtCd" fetch="LAZY">
        <join-column name="pymt_cd_id" referenced-column-name="pymt_cd_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="fpTktTxnHist"  mapped-by="fpTkt" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
