<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.Pd" access="FIELD">
     <table name="cpd" />

     <attributes>
        <id name="pdId">
            <column name="pd_id" />
            <generated-value strategy="TABLE" generator="CPD_SEQ" />
            <table-generator name="CPD_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="cpd_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="seqNo">
            <column name="seq_no" />
        </basic>

        <basic name="pdCd">
            <column name="pd_cd" />
        </basic>

        <basic name="pdName">
            <column name="pd_name" />
        </basic>

        <basic name="pdNameChin">
            <column name="pd_name_chin" />
        </basic>

        <basic name="pdNameChinSimpl">
            <column name="pd_name_chin_simpl" />
        </basic>

        <basic name="telNo">
            <column name="tel_no" />
        </basic>

        <basic name="faxNo">
            <column name="fax_no" />
        </basic>

        <basic name="mobiNo">
            <column name="mobi_no" />
        </basic>

        <basic name="deptHeadTitleEng">
            <column name="dept_head_title_eng" />
        </basic>

        <basic name="deptHeadTitleChi">
            <column name="dept_head_title_chi" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="activeFlag">
            <column name="active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="addr" fetch="LAZY">
        <join-column name="addr_id" referenced-column-name="addr_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
