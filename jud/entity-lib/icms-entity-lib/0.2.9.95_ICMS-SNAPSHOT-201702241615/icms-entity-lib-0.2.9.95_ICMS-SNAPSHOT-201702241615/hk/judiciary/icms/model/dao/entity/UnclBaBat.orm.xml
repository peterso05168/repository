<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.UnclBaBat" access="FIELD">
     <table name="tuncl_ba_bat" />

     <attributes>
        <id name="unclBaBatId">
            <column name="uncl_ba_bat_id" />
            <generated-value strategy="TABLE" generator="TUNCL_BA_BAT_SEQ" />
            <table-generator name="TUNCL_BA_BAT_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tuncl_ba_bat_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="batNo">
            <column name="bat_no" />
        </basic>

        <basic name="batCreateDt">
            <column name="bat_create_dt" />
        </basic>

        <basic name="batDelDt">
            <column name="bat_del_dt" />
        </basic>

        <basic name="toTdaDate">
            <column name="to_tda_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="toRevuDate">
            <column name="to_revu_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="unclBaBatStatus" fetch="LAZY">
        <join-column name="uncl_ba_bat_status_id" referenced-column-name="uncl_ba_bat_status_id" />
    </many-to-one>

    <many-to-one name="createPymtWs" fetch="LAZY">
        <join-column name="create_pymt_ws_id" referenced-column-name="pymt_ws_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="unclBaBatItem"  mapped-by="unclBaBat" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="toTdaPymtOutTxn" fetch="LAZY">
        <join-column name="to_tda_pymt_out_txn_id" referenced-column-name="pymt_out_txn_id" />
    </one-to-one>

    <one-to-one name="toRevuVochReg" fetch="LAZY">
        <join-column name="to_revu_voch_reg_id" referenced-column-name="voch_reg_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
