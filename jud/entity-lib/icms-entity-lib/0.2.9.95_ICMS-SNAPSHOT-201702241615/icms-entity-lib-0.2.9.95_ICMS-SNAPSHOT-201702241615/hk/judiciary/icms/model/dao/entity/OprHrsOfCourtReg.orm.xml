<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.OprHrsOfCourtReg" access="FIELD">
     <table name="topr_hrs_of_court_reg" />

     <attributes>
        <id name="oprHrsOfCourtRegId">
            <column name="opr_hrs_of_court_reg_id" />
            <generated-value strategy="TABLE" generator="TOPR_HRS_OF_COURT_REG_SEQ" />
            <table-generator name="TOPR_HRS_OF_COURT_REG_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="topr_hrs_of_court_reg_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="oprHrsOfCourtRegDate">
            <column name="opr_hrs_of_court_reg_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="oprHrsOfCourtRegOpenTime">
            <column name="opr_hrs_of_court_reg_open_time" />
        </basic>

        <basic name="oprHrsOfCourtRegClsgTime">
            <column name="opr_hrs_of_court_reg_clsg_time" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="courtLvlType" fetch="LAZY">
        <join-column name="court_lvl_type_id" referenced-column-name="court_lvl_type_id" />
    </many-to-one>

    <many-to-one name="courtVenue" fetch="LAZY">
        <join-column name="court_venue_id" referenced-column-name="court_venue_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
