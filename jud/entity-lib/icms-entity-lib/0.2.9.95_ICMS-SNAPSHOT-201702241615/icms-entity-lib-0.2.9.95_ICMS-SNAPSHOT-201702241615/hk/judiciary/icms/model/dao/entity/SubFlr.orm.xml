<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.SubFlr" access="FIELD">
     <table name="tsub_flr" />

     <attributes>
        <id name="subFlrId">
            <column name="sub_flr_id" />
            <generated-value strategy="TABLE" generator="TSUB_FLR_SEQ" />
            <table-generator name="TSUB_FLR_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tsub_flr_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="subFlrDesc">
            <column name="sub_flr_desc" />
        </basic>

        <basic name="subFlrSeqNo">
            <column name="sub_flr_seq_no" />
        </basic>

        <basic name="subFlrPrfx">
            <column name="sub_flr_prfx" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>

    <many-to-one name="flr" fetch="LAZY">
        <join-column name="flr_id" referenced-column-name="flr_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="docFlrAcsRight"  mapped-by="subFlr" fetch="LAZY" />
    <one-to-many name="docFolio"  mapped-by="subFlr" fetch="LAZY" />
    <one-to-many name="ecfFlr"  mapped-by="subFlr" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
