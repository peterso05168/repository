<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.AdjtmentRegItem" access="FIELD">
     <table name="tadjtment_reg_item" />

     <attributes>
        <id name="adjtmentRegItemId">
            <column name="adjtment_reg_item_id" />
            <generated-value strategy="TABLE" generator="TADJTMENT_REG_ITEM_SEQ" />
            <table-generator name="TADJTMENT_REG_ITEM_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tadjtment_reg_item_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="amt">
            <column name="amt" />
        </basic>

        <basic name="payerName">
            <column name="payer_name" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="adjtmentReg" fetch="LAZY">
        <join-column name="adjtment_reg_id" referenced-column-name="adjtment_reg_id" />
    </many-to-one>

    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>

    <many-to-one name="partcpRole" fetch="LAZY">
        <join-column name="partcp_role_id" referenced-column-name="partcp_role_id" />
    </many-to-one>

    <many-to-one name="pymtCd" fetch="LAZY">
        <join-column name="pymt_cd_id" referenced-column-name="pymt_cd_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="oldAdjtmentRegItem" fetch="LAZY">
        <join-column name="old_adjtment_reg_item_id" referenced-column-name="adjtment_reg_item_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
