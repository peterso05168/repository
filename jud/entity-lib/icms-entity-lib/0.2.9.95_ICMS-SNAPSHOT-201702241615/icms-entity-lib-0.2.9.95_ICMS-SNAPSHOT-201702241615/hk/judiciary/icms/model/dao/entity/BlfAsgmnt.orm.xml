<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BlfAsgmnt" access="FIELD">
     <table name="tblf_asgmnt" />

     <attributes>
        <id name="blfAsgmntId">
            <column name="blf_asgmnt_id" />
            <generated-value strategy="TABLE" generator="TBLF_ASGMNT_SEQ" />
            <table-generator name="TBLF_ASGMNT_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tblf_asgmnt_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="asgmntSeqNo">
            <column name="asgmnt_seq_no" />
        </basic>

        <basic name="priAsgmntFlag">
            <column name="pri_asgmnt_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="blfTask" fetch="LAZY">
        <join-column name="blf_task_id" referenced-column-name="blf_task_id" />
    </many-to-one>

    <many-to-one name="blfAsgset" fetch="LAZY">
        <join-column name="blf_asgset_id" referenced-column-name="blf_asgset_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="blfEvent"  mapped-by="blfAsgmnt" fetch="LAZY" />
    <one-to-many name="blfMediaRecor"  mapped-by="blfAsgmnt" fetch="LAZY" />
    <one-to-many name="blfTravlExpense"  mapped-by="blfAsgmnt" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
