<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.AdjtmentReg" access="FIELD">
     <table name="tadjtment_reg" />

     <attributes>
        <id name="adjtmentRegId">
            <column name="adjtment_reg_id" />
            <generated-value strategy="TABLE" generator="TADJTMENT_REG_SEQ" />
            <table-generator name="TADJTMENT_REG_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tadjtment_reg_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="adjtmentDate">
            <column name="adjtment_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="adjtmentRmk">
            <column name="adjtment_rmk" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="reptReg" fetch="LAZY">
        <join-column name="rept_reg_id" referenced-column-name="rept_reg_id" />
    </many-to-one>

    <many-to-one name="adjtmentRegType" fetch="LAZY">
        <join-column name="adjtment_reg_type_id" referenced-column-name="adjtment_reg_type_id" />
    </many-to-one>

    <many-to-one name="compsCourt" fetch="LAZY">
        <join-column name="comps_court_id" referenced-column-name="comps_court_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="adjtmentRegItem"  mapped-by="adjtmentReg" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
