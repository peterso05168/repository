<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.SnpshtMap" access="FIELD">
     <table name="tsnpsht_map" />

     <attributes>
        <id name="snpshtMapId">
            <column name="snpsht_map_id" />
            <generated-value strategy="TABLE" generator="TSNPSHT_MAP_SEQ" />
            <table-generator name="TSNPSHT_MAP_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tsnpsht_map_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="courtLvlType" fetch="LAZY">
        <join-column name="court_lvl_type_id" referenced-column-name="court_lvl_type_id" />
    </many-to-one>

    <many-to-one name="miRptCatType" fetch="LAZY">
        <join-column name="mi_rpt_cat_type_id" referenced-column-name="mi_rpt_cat_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="snpshtDtl"  mapped-by="snpshtMap" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
