<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.App" access="FIELD">
     <table name="tapp" />

     <attributes>
        <id name="appId">
            <column name="app_id" />
            <generated-value strategy="TABLE" generator="TAPP_SEQ" />
            <table-generator name="TAPP_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tapp_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="appCd">
            <column name="app_cd" />
        </basic>

        <basic name="appName">
            <column name="app_name" />
        </basic>

        <basic name="appDesc">
            <column name="app_desc" />
        </basic>

        <basic name="appDspName">
            <column name="app_dsp_name" />
        </basic>

        <basic name="appUrl">
            <column name="app_url" />
        </basic>

        <basic name="autoLoginFlag">
            <column name="auto_login_flag" />
        </basic>

        <basic name="ptletFlag">
            <column name="ptlet_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->
    <one-to-many name="appToProj"  mapped-by="app" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
