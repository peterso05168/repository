<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.DocGenReqs" access="FIELD">
     <table name="tdoc_gen_reqs" />

     <attributes>
        <id name="docGenReqsId">
            <column name="doc_gen_reqs_id" />
            <generated-value strategy="TABLE" generator="TDOC_GEN_REQS_SEQ" />
            <table-generator name="TDOC_GEN_REQS_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tdoc_gen_reqs_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="lastModDt">
            <column name="last_mod_dt" />
        </basic>

        <basic name="affixPageNoFlag">
            <column name="affix_page_no_flag" />
        </basic>

        <basic name="mergedContPath">
            <column name="merged_cont_path" />
        </basic>

        <basic name="clientReqsKey">
            <column name="client_reqs_key" />
        </basic>

        <basic name="autoSaveContPath">
            <column name="auto_save_cont_path" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="lastModUserAc" fetch="LAZY">
        <join-column name="last_mod_user_ac_id" referenced-column-name="intl_user_ac_id" />
    </many-to-one>

    <many-to-one name="docProcStatusType" fetch="LAZY">
        <join-column name="doc_proc_status_type_id" referenced-column-name="doc_proc_status_type_id" />
    </many-to-one>

    <many-to-one name="docTmplDtl" fetch="LAZY">
        <join-column name="doc_tmpl_dtl_id" referenced-column-name="doc_tmpl_dtl_id" />
    </many-to-one>

    <many-to-one name="docPageHdrTmplDtl" fetch="LAZY">
        <join-column name="doc_page_hdr_tmpl_dtl_id" referenced-column-name="doc_page_hdr_tmpl_dtl_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="affixDtl"  mapped-by="docGenReqs" fetch="LAZY" />
    <one-to-many name="docGenReqsRsltPath"  mapped-by="docGenReqs" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
