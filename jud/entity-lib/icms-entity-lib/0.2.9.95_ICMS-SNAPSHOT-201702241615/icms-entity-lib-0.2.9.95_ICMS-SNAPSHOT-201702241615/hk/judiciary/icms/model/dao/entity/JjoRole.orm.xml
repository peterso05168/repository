<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.JjoRole" access="FIELD">
     <table name="tjjo_role" />

     <attributes>
        <id name="jjoRoleId">
            <column name="jjo_role_id" />
            <generated-value strategy="TABLE" generator="TJJO_ROLE_SEQ" />
            <table-generator name="TJJO_ROLE_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tjjo_role_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="jjoRoleCd">
            <column name="jjo_role_cd" />
        </basic>

        <basic name="jjoRoleName">
            <column name="jjo_role_name" />
        </basic>

        <basic name="jjoRoleDesc">
            <column name="jjo_role_desc" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="jjoGrp" fetch="LAZY">
        <join-column name="jjo_grp_id" referenced-column-name="jjo_grp_id" />
    </many-to-one>

    <many-to-one name="courtLvlType" fetch="LAZY">
        <join-column name="court_lvl_type_id" referenced-column-name="court_lvl_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="jjoRoleToFunc"  mapped-by="jjoRole" fetch="LAZY" />
    <one-to-many name="jjoToRole"  mapped-by="jjoRole" fetch="LAZY" />
 <!--
    <one-to-many name="rptTypeToJjoRole"  mapped-by="jjoRole" fetch="LAZY" />
 -->


<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
