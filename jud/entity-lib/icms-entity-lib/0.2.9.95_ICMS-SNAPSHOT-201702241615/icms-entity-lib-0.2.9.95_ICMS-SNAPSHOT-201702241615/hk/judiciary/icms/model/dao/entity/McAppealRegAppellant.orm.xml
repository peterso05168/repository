<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.McAppealRegAppellant" access="FIELD">
     <table name="tmc_appeal_reg_appellant" />

     <attributes>
        <id name="mcAppealRegAppellantId">
            <column name="mc_appeal_reg_appellant_id" />
            <generated-value strategy="TABLE" generator="TMC_APPEAL_REG_APPELLANT_SEQ" />
            <table-generator name="TMC_APPEAL_REG_APPELLANT_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tmc_appeal_reg_appellant_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="appellantType">
            <column name="appellant_type" />
        </basic>

        <basic name="status">
            <column name="status" />
        </basic>

        <basic name="thirdPtyId">
            <column name="third_pty_id" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="mcAppealRegCaseMap" fetch="LAZY">
        <join-column name="mc_appeal_reg_case_map_id" referenced-column-name="mc_appeal_reg_case_map_id" />
    </many-to-one>

    <many-to-one name="jjoProfile" fetch="LAZY">
        <join-column name="jjo_profile_id" referenced-column-name="jjo_profile_id" />
    </many-to-one>

    <many-to-one name="pd" fetch="LAZY">
        <join-column name="pd_id" referenced-column-name="pd_id" />
    </many-to-one>

    <many-to-one name="partcpRole" fetch="LAZY">
        <join-column name="partcp_role_id" referenced-column-name="partcp_role_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="mcAppealRegStnceOrdr"  mapped-by="mcAppealRegAppellant" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
