<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PymtReqs" access="FIELD">
     <table name="tpymt_reqs" />

     <attributes>
        <id name="pymtReqsId">
            <column name="pymt_reqs_id" />
            <generated-value strategy="TABLE" generator="TPYMT_REQS_SEQ" />
            <table-generator name="TPYMT_REQS_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tpymt_reqs_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="docRefNo">
            <column name="doc_ref_no" />
        </basic>

        <basic name="pymtReqsAmt">
            <column name="pymt_reqs_amt" />
        </basic>

        <basic name="settlePrty">
            <column name="settle_prty" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="hrnRsltCd" fetch="LAZY">
        <join-column name="hrn_rslt_cd_id" referenced-column-name="hrn_rslt_cd_id" />
    </many-to-one>

    <many-to-one name="doc" fetch="LAZY">
        <join-column name="doc_id" referenced-column-name="doc_id" />
    </many-to-one>

    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>

    <many-to-one name="pymtSchd" fetch="LAZY">
        <join-column name="pymt_schd_id" referenced-column-name="pymt_schd_id" />
    </many-to-one>

    <many-to-one name="pymtCd" fetch="LAZY">
        <join-column name="pymt_cd_id" referenced-column-name="pymt_cd_id" />
    </many-to-one>

    <many-to-one name="pymtSubCd" fetch="LAZY">
        <join-column name="pymt_sub_cd_id" referenced-column-name="pymt_sub_cd_id" />
    </many-to-one>

    <many-to-one name="curcyCd" fetch="LAZY">
        <join-column name="curcy_cd_id" referenced-column-name="curcy_cd_id" />
    </many-to-one>

    <many-to-one name="pymtStatusType" fetch="LAZY">
        <join-column name="pymt_status_type_id" referenced-column-name="pymt_status_type_id" />
    </many-to-one>

    <many-to-one name="partcpRole" fetch="LAZY">
        <join-column name="partcp_role_id" referenced-column-name="partcp_role_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="pymtInItem"  mapped-by="pymtReqs" fetch="LAZY" />
    <one-to-many name="writeOffRegItem"  mapped-by="pymtReqs" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="pymtOrdr" fetch="LAZY">
        <join-column name="pymt_ordr_id" referenced-column-name="pymt_ordr_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
