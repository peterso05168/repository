<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PymtWs" access="FIELD">
     <table name="cpymt_ws" />

     <attributes>
        <id name="pymtWsId">
            <column name="pymt_ws_id" />
            <generated-value strategy="TABLE" generator="CPYMT_WS_SEQ" />
            <table-generator name="CPYMT_WS_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="cpymt_ws_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="pymtWsDesc">
            <column name="pymt_ws_desc" />
        </basic>

        <basic name="pymtWsNo">
            <column name="pymt_ws_no" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="activeFlag">
            <column name="active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="centre" fetch="LAZY">
        <join-column name="centre_id" referenced-column-name="centre_id" />
    </many-to-one>

    <many-to-one name="pymtWsStatus" fetch="LAZY">
        <join-column name="pymt_ws_status_id" referenced-column-name="pymt_ws_status_id" />
    </many-to-one>

    <many-to-one name="courtLvlType" fetch="LAZY">
        <join-column name="court_lvl_type_id" referenced-column-name="court_lvl_type_id" />
    </many-to-one>

    <many-to-one name="pymtWsOprMode" fetch="LAZY">
        <join-column name="pymt_ws_opr_mode_id" referenced-column-name="pymt_ws_opr_mode_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="epayTxnccMap"  mapped-by="pymtWs" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="ws" fetch="LAZY">
        <join-column name="ws_id" referenced-column-name="ws_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
