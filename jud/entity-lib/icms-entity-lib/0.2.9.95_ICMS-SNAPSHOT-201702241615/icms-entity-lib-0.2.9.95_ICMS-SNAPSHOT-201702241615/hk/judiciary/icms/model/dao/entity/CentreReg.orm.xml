<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.CentreReg" access="FIELD">
     <table name="tcentre_reg" />

     <attributes>
        <id name="centreRegId">
            <column name="centre_reg_id" />
            <generated-value strategy="TABLE" generator="TCENTRE_REG_SEQ" />
            <table-generator name="TCENTRE_REG_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tcentre_reg_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="chngBy">
            <column name="chng_by" />
        </basic>

        <basic name="chngDt">
            <column name="chng_dt" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="centre" fetch="LAZY">
        <join-column name="centre_id" referenced-column-name="centre_id" />
    </many-to-one>

    <many-to-one name="centreStatus" fetch="LAZY">
        <join-column name="centre_status_id" referenced-column-name="centre_status_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
