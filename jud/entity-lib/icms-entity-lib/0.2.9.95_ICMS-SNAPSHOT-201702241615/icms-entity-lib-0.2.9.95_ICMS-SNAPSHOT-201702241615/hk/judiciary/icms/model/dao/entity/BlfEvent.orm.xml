<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BlfEvent" access="FIELD">
     <table name="tblf_event" />

     <attributes>
        <id name="blfEventId">
            <column name="blf_event_id" />
            <generated-value strategy="TABLE" generator="TBLF_EVENT_SEQ" />
            <table-generator name="TBLF_EVENT_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tblf_event_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="eventStartTime">
            <column name="event_start_time" />
        </basic>

        <basic name="eventEndTime">
            <column name="event_end_time" />
        </basic>

        <basic name="eventNote">
            <column name="event_note" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="blfAsgmnt" fetch="LAZY">
        <join-column name="blf_asgmnt_id" referenced-column-name="blf_asgmnt_id" />
    </many-to-one>

    <many-to-one name="blfEventType" fetch="LAZY">
        <join-column name="blf_event_type_id" referenced-column-name="blf_event_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
