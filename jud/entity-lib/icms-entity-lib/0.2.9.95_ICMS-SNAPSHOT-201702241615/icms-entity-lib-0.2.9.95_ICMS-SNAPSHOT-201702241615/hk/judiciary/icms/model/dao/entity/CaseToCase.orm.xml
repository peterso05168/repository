<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.CaseToCase" access="FIELD">
     <table name="tcase_to_case" />

     <attributes>
        <id name="caseToCaseId">
            <column name="case_to_case_id" />
            <generated-value strategy="TABLE" generator="TCASE_TO_CASE_SEQ" />
            <table-generator name="TCASE_TO_CASE_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tcase_to_case_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="caseTrnfDate">
            <column name="case_trnf_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="caseTrnfPur">
            <column name="case_trnf_pur" />
        </basic>

        <basic name="relCompsCourtCd">
            <column name="rel_comps_court_cd" />
        </basic>

        <basic name="relCaseTypeCd">
            <column name="rel_case_type_cd" />
        </basic>

        <basic name="relCaseSerNo">
            <column name="rel_case_ser_no" />
        </basic>

        <basic name="relCaseYr">
            <column name="rel_case_yr" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="relCase" fetch="LAZY">
        <join-column name="rel_case_id" referenced-column-name="case_id" />
    </many-to-one>

    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>

    <many-to-one name="relshpType" fetch="LAZY">
        <join-column name="relshp_type_id" referenced-column-name="relshp_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
