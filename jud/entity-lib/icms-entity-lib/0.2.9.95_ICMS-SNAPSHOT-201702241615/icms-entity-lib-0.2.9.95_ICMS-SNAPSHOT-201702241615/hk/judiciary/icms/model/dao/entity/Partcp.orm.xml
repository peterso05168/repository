<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.Partcp" access="FIELD">
     <table name="tpartcp" />

     <attributes>
        <id name="partcpId">
            <column name="partcp_id" />
            <generated-value strategy="TABLE" generator="TPARTCP_SEQ" />
            <table-generator name="TPARTCP_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tpartcp_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="partcpType" fetch="LAZY">
        <join-column name="partcp_type_id" referenced-column-name="partcp_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="addrRole"  mapped-by="partcp" fetch="LAZY" />
    <one-to-many name="partcpRelshpPtyBId"  mapped-by="ptyB" fetch="LAZY" />
    <one-to-many name="partcpRelshpPtyAId"  mapped-by="ptyA" fetch="LAZY" />
    <one-to-many name="partcpRole"  mapped-by="partcp" fetch="LAZY" />
    <one-to-many name="reqsPartcpRole"  mapped-by="partcp" fetch="LAZY" />
    <one-to-many name="blfCaveatPartcp"  mapped-by="partcp" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="person" fetch="LAZY">
        <join-column name="person_id" referenced-column-name="person_id" />
    </one-to-one>

    <one-to-one name="org" fetch="LAZY">
        <join-column name="org_id" referenced-column-name="org_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
