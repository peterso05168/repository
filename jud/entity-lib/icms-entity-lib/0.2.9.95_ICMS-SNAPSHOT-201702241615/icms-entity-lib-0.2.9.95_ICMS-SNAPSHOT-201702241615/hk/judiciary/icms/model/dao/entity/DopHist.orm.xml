<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.DopHist" access="FIELD">
     <table name="tdop_hist" />

     <attributes>
        <id name="dopHistId">
            <column name="dop_hist_id" />
            <generated-value strategy="TABLE" generator="TDOP_HIST_SEQ" />
            <table-generator name="TDOP_HIST_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tdop_hist_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="dopOfncCd">
            <column name="dop_ofnc_cd" />
        </basic>

        <basic name="ofncDate">
            <column name="ofnc_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="convictDate">
            <column name="convict_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="dopPntIncur">
            <column name="dop_pnt_incur" />
        </basic>

        <basic name="tktNo">
            <column name="tkt_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>

    <many-to-one name="chrgToPartcp" fetch="LAZY">
        <join-column name="chrg_to_partcp_id" referenced-column-name="chrg_to_partcp_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
