<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BlfStmtOfAcHist" access="FIELD">
     <table name="tblf_stmt_of_ac_hist" />

     <attributes>
        <id name="blfStmtOfAcHistId">
            <column name="blf_stmt_of_ac_hist_id" />
            <generated-value strategy="TABLE" generator="TBLF_STMT_OF_AC_HIST_SEQ" />
            <table-generator name="TBLF_STMT_OF_AC_HIST_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tblf_stmt_of_ac_hist_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="reqsDt">
            <column name="reqs_dt" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="blfStmtOfAcHistSubmitDt">
            <column name="blf_stmt_of_ac_hist_submit_dt" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="appvDt">
            <column name="appv_dt" />
            <temporal>TIMESTAMP</temporal>
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="blfStmtOfAc" fetch="LAZY">
        <join-column name="blf_stmt_of_ac_id" referenced-column-name="blf_stmt_of_ac_id" />
    </many-to-one>

    <many-to-one name="reqsBy" fetch="LAZY">
        <join-column name="reqs_by" referenced-column-name="intl_user_ac_id" />
    </many-to-one>

    <many-to-one name="submitBy" fetch="LAZY">
        <join-column name="submit_by" referenced-column-name="intl_user_ac_id" />
    </many-to-one>

    <many-to-one name="blfStmtOfAcHistAppvBy" fetch="LAZY">
        <join-column name="blf_stmt_of_ac_hist_appv_by" referenced-column-name="intl_user_ac_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
