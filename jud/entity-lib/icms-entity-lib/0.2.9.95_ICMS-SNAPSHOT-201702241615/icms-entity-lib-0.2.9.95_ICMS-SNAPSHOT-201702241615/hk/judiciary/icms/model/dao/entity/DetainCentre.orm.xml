<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.DetainCentre" access="FIELD">
     <table name="cdetain_centre" />

     <attributes>
        <id name="detainCentreId">
            <column name="detain_centre_id" />
            <generated-value strategy="TABLE" generator="CDETAIN_CENTRE_SEQ" />
            <table-generator name="CDETAIN_CENTRE_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="cdetain_centre_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="detainCentreDesc">
            <column name="detain_centre_desc" />
        </basic>

        <basic name="detainCentreCd">
            <column name="detain_centre_cd" />
        </basic>

        <basic name="detainCentreType">
            <column name="detain_centre_type" />
        </basic>

        <basic name="addrLine1">
            <column name="addr_line_1" />
        </basic>

        <basic name="addrLine2">
            <column name="addr_line_2" />
        </basic>

        <basic name="addrLine3">
            <column name="addr_line_3" />
        </basic>

        <basic name="telNo">
            <column name="tel_no" />
        </basic>

        <basic name="faxNo">
            <column name="fax_no" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="activeFlag">
            <column name="active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="hkRgn" fetch="LAZY">
        <join-column name="hk_rgn_id" referenced-column-name="hk_rgn_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

