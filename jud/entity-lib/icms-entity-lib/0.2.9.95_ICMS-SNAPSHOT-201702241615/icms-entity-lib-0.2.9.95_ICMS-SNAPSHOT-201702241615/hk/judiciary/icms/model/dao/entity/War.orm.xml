<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.War" access="FIELD">
     <table name="twar" />

     <attributes>
        <id name="warId">
            <column name="war_id" />
            <generated-value strategy="TABLE" generator="TWAR_SEQ" />
            <table-generator name="TWAR_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="twar_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="warAmtDue">
            <column name="war_amt_due" />
        </basic>

        <basic name="warCost">
            <column name="war_cost" />
        </basic>

        <basic name="amtPaid">
            <column name="amt_paid" />
        </basic>

        <basic name="bailRemandInd">
            <column name="bail_remand_ind" />
        </basic>

        <basic name="bailAmt">
            <column name="bail_amt" />
        </basic>

        <basic name="warAppDate">
            <column name="war_app_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="rtnDateInfo">
            <column name="rtn_date_info" />
        </basic>

        <basic name="rtnTimeInfo">
            <column name="rtn_time_info" />
        </basic>

        <basic name="prtDt">
            <column name="prt_dt" />
        </basic>

        <basic name="prtBy">
            <column name="prt_by" />
        </basic>

        <basic name="ordrDt">
            <column name="ordr_dt" />
        </basic>

        <basic name="ordrBy">
            <column name="ordr_by" />
        </basic>

        <basic name="execDt">
            <column name="exec_dt" />
        </basic>

        <basic name="signDt">
            <column name="sign_dt" />
        </basic>

        <basic name="issueDt">
            <column name="issue_dt" />
        </basic>

        <basic name="noBail">
            <column name="no_bail" />
        </basic>

        <basic name="rsnOfAsso">
            <column name="rsn_of_asso" />
        </basic>

        <basic name="appvNote">
            <column name="appv_note" />
        </basic>

        <basic name="notAuthNote">
            <column name="not_auth_note" />
        </basic>

        <basic name="arrtWarCont">
            <column name="arrt_war_cont" />
        </basic>

        <basic name="outstandingPnlty">
            <column name="outstanding_pnlty" />
        </basic>

        <basic name="arrtWarFooter">
            <column name="arrt_war_footer" />
        </basic>

        <basic name="outstandingCourtCost">
            <column name="outstanding_court_cost" />
        </basic>

        <basic name="addlSum">
            <column name="addl_sum" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="courtRmChmbr" fetch="LAZY">
        <join-column name="court_rm_chmbr_id" referenced-column-name="court_rm_chmbr_id" />
    </many-to-one>

    <many-to-one name="warStatus" fetch="LAZY">
        <join-column name="war_status_id" referenced-column-name="war_status_id" />
    </many-to-one>

    <many-to-one name="partcpRole" fetch="LAZY">
        <join-column name="partcp_role_id" referenced-column-name="partcp_role_id" />
    </many-to-one>

    <many-to-one name="warTmpl" fetch="LAZY">
        <join-column name="war_tmpl_id" referenced-column-name="war_tmpl_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="warToHrnSchd"  mapped-by="war" fetch="LAZY" />
    <one-to-many name="pymtInItem"  mapped-by="war" fetch="LAZY" />
    <one-to-many name="warExec"  mapped-by="war" fetch="LAZY" />
    <one-to-many name="warOrdrWithdrawWarId"  mapped-by="withdrawWar" fetch="LAZY" />
    <one-to-many name="warOrdrCancelWarId"  mapped-by="cancelWar" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
