        </basic>

        <basic name="selfCashAmt">
            <column name="self_cash_amt" />
        </basic>

        <basic name="suretyDesc">
            <column name="surety_desc" />
        </basic>

        <basic name="suretyCashAmt">
            <column name="surety_cash_amt" />
        </basic>

        <basic name="ownRecognizanceAmt">
            <column name="own_recognizance_amt" />
        </basic>

        <basic name="notLeaveHkFlag">
            <column name="not_leave_hk_flag" />
        </basic>

        <basic name="surrenderAllTravelDocFlag">
            <column name="surrender_all_travel_doc_flag" />
        </basic>

        <basic name="surrenderAllTravelDocDesc">
            <column name="surrender_all_travel_doc_desc" />
        </basic>

        <basic name="obeyCurfewFlag">
            <column name="obey_curfew_flag" />
        </basic>

        <basic name="curfewFrDateime">
