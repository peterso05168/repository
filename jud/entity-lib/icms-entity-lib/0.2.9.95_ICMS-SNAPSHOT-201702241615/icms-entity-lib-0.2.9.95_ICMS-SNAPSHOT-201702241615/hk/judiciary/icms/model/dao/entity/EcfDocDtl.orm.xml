<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.EcfDocDtl" access="FIELD">
     <table name="tecf_doc_dtl" />

     <attributes>
        <id name="ecfMdId">
            <column name="ecf_md_id" />
            <generated-value strategy="TABLE" generator="TECF_DOC_DTL_SEQ" />
            <table-generator name="TECF_DOC_DTL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tecf_doc_dtl_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="createName">
            <column name="create_name" />
        </basic>

        <basic name="createOrgName">
            <column name="create_org_name" />
        </basic>

        <basic name="docCreateDt">
            <column name="doc_create_dt" />
        </basic>

        <basic name="docRecvDt">
            <column name="doc_recv_dt" />
        </basic>

        <basic name="langTypeDesc">
            <column name="lang_type_desc" />
        </basic>

        <basic name="mndt">
            <column name="mndt" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="secuClass">
            <column name="secu_class" />
        </basic>

        <basic name="senderName">
            <column name="sender_name" />
        </basic>

        <basic name="ecfDocTypeDesc">
            <column name="ecf_doc_type_desc" />
        </basic>

        <basic name="fileName">
            <column name="file_name" />
        </basic>

        <basic name="docTitle">
            <column name="doc_title" />
        </basic>

        <basic name="docStatus">
            <column name="doc_status" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->
    <one-to-many name="ecfPtyDtl"  mapped-by="ecfMd" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="doc" fetch="LAZY">
        <join-column name="doc_id" referenced-column-name="doc_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
