<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.CourtLvl" access="FIELD">
     <table name="ccourt_lvl" />

     <attributes>
        <id name="courtLvlId">
            <column name="court_lvl_id" />
            <generated-value strategy="TABLE" generator="CCOURT_LVL_SEQ" />
            <table-generator name="CCOURT_LVL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="ccourt_lvl_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="courtLvlCd">
            <column name="court_lvl_cd" />
        </basic>

        <basic name="courtLvlDesc">
            <column name="court_lvl_desc" />
        </basic>

        <basic name="caseNoPrfx">
            <column name="case_no_prfx" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="activeFlag">
            <column name="active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="courtLvlType" fetch="LAZY">
        <join-column name="court_lvl_type_id" referenced-column-name="court_lvl_type_id" />
    </many-to-one>

    <many-to-one name="courtVenue" fetch="LAZY">
        <join-column name="court_venue_id" referenced-column-name="court_venue_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
