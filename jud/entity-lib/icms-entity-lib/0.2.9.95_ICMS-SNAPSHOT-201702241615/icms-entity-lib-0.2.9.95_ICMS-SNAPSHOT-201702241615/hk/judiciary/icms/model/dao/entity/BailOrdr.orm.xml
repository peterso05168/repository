            <column name="by_self_cash_flag" />
        </basic>

        <basic name="bailGrantInd">
            <column name="bail_grant_ind" />
        </basic>

        <basic name="custodyTypeInd">
            <column name="custody_type_ind" />
        </basic>

        <basic name="otherCondDesc">
            <column name="other_cond_desc" />
        </basic>

        <basic name="otherCondFlag">
            <column name="other_cond_flag" />
