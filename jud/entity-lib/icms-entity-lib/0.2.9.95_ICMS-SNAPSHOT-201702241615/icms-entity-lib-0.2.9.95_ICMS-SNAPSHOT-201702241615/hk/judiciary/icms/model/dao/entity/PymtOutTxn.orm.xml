<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.PymtOutTxn" access="FIELD">
     <table name="tpymt_out_txn" />

     <attributes>
        <id name="pymtOutTxnId">
            <column name="pymt_out_txn_id" />
            <generated-value strategy="TABLE" generator="TPYMT_OUT_TXN_SEQ" />
            <table-generator name="TPYMT_OUT_TXN_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tpymt_out_txn_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="pymtOutTxnAmt">
            <column name="pymt_out_txn_amt" />
        </basic>

        <basic name="pymtOutTxnDt">
            <column name="pymt_out_txn_dt" />
        </basic>

        <basic name="pymtOutTxnProcBy">
            <column name="pymt_out_txn_proc_by" />
        </basic>

        <basic name="pymtOutTxnProcDt">
            <column name="pymt_out_txn_proc_dt" />
        </basic>

        <basic name="pymtOutTxnAppvBy">
            <column name="pymt_out_txn_appv_by" />
        </basic>

        <basic name="pymtOutTxnAppvDt">
            <column name="pymt_out_txn_appv_dt" />
        </basic>

        <basic name="pymtOutTxnClsgStatus">
            <column name="pymt_out_txn_clsg_status" />
        </basic>

        <basic name="pymtOutTxnClsgDate">
            <column name="pymt_out_txn_clsg_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="txnDesc">
            <column name="txn_desc" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="curcyCd" fetch="LAZY">
        <join-column name="curcy_cd_id" referenced-column-name="curcy_cd_id" />
    </many-to-one>

    <many-to-one name="centre" fetch="LAZY">
        <join-column name="centre_id" referenced-column-name="centre_id" />
    </many-to-one>

    <many-to-one name="pymtWs" fetch="LAZY">
        <join-column name="pymt_ws_id" referenced-column-name="pymt_ws_id" />
    </many-to-one>

    <many-to-one name="pymtWsOprMode" fetch="LAZY">
        <join-column name="pymt_ws_opr_mode_id" referenced-column-name="pymt_ws_opr_mode_id" />
    </many-to-one>

    <many-to-one name="pymtTxnStatus" fetch="LAZY">
        <join-column name="pymt_txn_status_id" referenced-column-name="pymt_txn_status_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="baRegItem"  mapped-by="pymtOutTxn" fetch="LAZY" />
    <one-to-many name="pymtMethDtl"  mapped-by="pymtOutTxn" fetch="LAZY" />
    <one-to-many name="pymtOutTxnItemHist"  mapped-by="pymtOutTxn" fetch="LAZY" />
    <one-to-many name="vochReg"  mapped-by="pymtOutTxn" fetch="LAZY" />
    <one-to-many name="amendRecipPlan"  mapped-by="dispPymtOutTxn" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="rvseReg"  mapped-by="pymtOutTxn" fetch="LAZY" />
    <one-to-one name="unclBaBat"  mapped-by="toTdaPymtOutTxn" fetch="LAZY" />

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
