<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.LstList" access="FIELD">
     <table name="tlst_list" />

     <attributes>
        <id name="listId">
            <column name="list_id" />
            <generated-value strategy="TABLE" generator="TLST_LIST_SEQ" />
            <table-generator name="TLST_LIST_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tlst_list_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="listName">
            <column name="list_name" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="status">
            <column name="status" />
        </basic>

        <basic name="noOfJjo">
            <column name="no_of_jjo" />
        </basic>

        <basic name="ffBusRuleDesc">
            <column name="ff_bus_rule_desc" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="listType" fetch="LAZY">
        <join-column name="list_type_id" referenced-column-name="list_type_id" />
    </many-to-one>

    <many-to-one name="compsCourt" fetch="LAZY">
        <join-column name="comps_court_id" referenced-column-name="comps_court_id" />
    </many-to-one>

    <many-to-one name="courtLvlType" fetch="LAZY">
        <join-column name="court_lvl_type_id" referenced-column-name="court_lvl_type_id" />
    </many-to-one>

    <many-to-one name="courtRmAlias" fetch="LAZY">
        <join-column name="court_rm_alias_id" referenced-column-name="court_rm_alias_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="courtRmToList"  mapped-by="list" fetch="LAZY" />
    <one-to-many name="jjoToList"  mapped-by="list" fetch="LAZY" />
    <one-to-many name="listCharcs"  mapped-by="list" fetch="LAZY" />
    <one-to-many name="listSchd"  mapped-by="list" fetch="LAZY" />
    <one-to-many name="listSharePerd"  mapped-by="list" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
