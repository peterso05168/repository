<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.TaxBillOfCostItem" access="FIELD">
     <table name="ttax_bill_of_cost_item" />

     <attributes>
        <id name="taxBillOfCostItemId">
            <column name="tax_bill_of_cost_item_id" />
            <generated-value strategy="TABLE" generator="TTAX_BILL_OF_COST_ITEM_SEQ" />
            <table-generator name="TTAX_BILL_OF_COST_ITEM_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="ttax_bill_of_cost_item_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="itemToBeTax">
            <column name="item_to_be_tax" />
        </basic>

        <basic name="taxItemIncurDate">
            <column name="tax_item_incur_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="taxAmt">
            <column name="tax_amt" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="taxBillOfCost" fetch="LAZY">
        <join-column name="tax_bill_of_cost_id" referenced-column-name="tax_bill_of_cost_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="taxAllor"  mapped-by="taxBillOfCostItem" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
