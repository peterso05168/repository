<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.Addr" access="FIELD">
     <table name="taddr" />

     <attributes>
        <id name="addrId">
            <column name="addr_id" />
            <generated-value strategy="TABLE" generator="TADDR_SEQ" />
            <table-generator name="TADDR_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="taddr_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="addrLine1">
            <column name="addr_line_1" />
        </basic>

        <basic name="addrLine2">
            <column name="addr_line_2" />
        </basic>

        <basic name="addrLine3">
            <column name="addr_line_3" />
        </basic>

        <basic name="addrLine1Chin">
            <column name="addr_line_1_chin" />
        </basic>

        <basic name="addrLine2Chin">
            <column name="addr_line_2_chin" />
        </basic>

        <basic name="addrLine3Chin">
            <column name="addr_line_3_chin" />
        </basic>

        <basic name="addrAliasName">
            <column name="addr_alias_name" />
        </basic>

        <basic name="fgnAddrFlag">
            <column name="fgn_addr_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="hkDist" fetch="LAZY">
        <join-column name="hk_dist_id" referenced-column-name="hk_dist_id" />
    </many-to-one>

    <many-to-one name="rgn" fetch="LAZY">
        <join-column name="rgn_id" referenced-column-name="hk_rgn_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="chrgApp"  mapped-by="addr" fetch="LAZY" />
    <one-to-many name="addrRole"  mapped-by="addr" fetch="LAZY" />
    <one-to-many name="pd"  mapped-by="addr" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="blfCaveatPartcp"  mapped-by="addr" fetch="LAZY" />

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
