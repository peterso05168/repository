<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.ExtRole" access="FIELD">
     <table name="text_role" />

     <attributes>
        <id name="extRoleId">
            <column name="ext_role_id" />
            <generated-value strategy="TABLE" generator="TEXT_ROLE_SEQ" />
            <table-generator name="TEXT_ROLE_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="text_role_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="extRoleCd">
            <column name="ext_role_cd" />
        </basic>

        <basic name="extRoleName">
            <column name="ext_role_name" />
        </basic>

        <basic name="extRoleDesc">
            <column name="ext_role_desc" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="acType" fetch="LAZY">
        <join-column name="ac_type_id" referenced-column-name="ac_type_id" />
    </many-to-one>

    <many-to-one name="ewpOrg" fetch="LAZY">
        <join-column name="ewp_org_id" referenced-column-name="ewp_org_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="extRoleToFunc"  mapped-by="extRole" fetch="LAZY" />
    <one-to-many name="extUserAcToRole"  mapped-by="extRole" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
