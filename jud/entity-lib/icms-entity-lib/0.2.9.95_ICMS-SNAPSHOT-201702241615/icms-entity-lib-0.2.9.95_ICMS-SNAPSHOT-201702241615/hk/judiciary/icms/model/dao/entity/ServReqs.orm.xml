<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.ServReqs" access="FIELD">
     <table name="tserv_reqs" />

     <attributes>
        <id name="servReqsId">
            <column name="serv_reqs_id" />
            <generated-value strategy="TABLE" generator="TSERV_REQS_SEQ" />
            <table-generator name="TSERV_REQS_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tserv_reqs_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="hrnDate">
            <column name="hrn_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="servBefDate">
            <column name="serv_bef_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="affidavitReqFlag">
            <column name="affidavit_req_flag" />
        </basic>

        <basic name="regMailBarcd">
            <column name="reg_mail_barcd" />
        </basic>

        <basic name="ctatPerson">
            <column name="ctat_person" />
        </basic>

        <basic name="telNo">
            <column name="tel_no" />
        </basic>

        <basic name="formerReqsIntlNo">
            <column name="former_reqs_intl_no" />
        </basic>

        <basic name="formerRegNo">
            <column name="former_reg_no" />
        </basic>

        <basic name="recipSurname">
            <column name="recip_surname" />
        </basic>

        <basic name="recipGivenName">
            <column name="recip_given_name" />
        </basic>

        <basic name="dlvryInstr">
            <column name="dlvry_instr" />
        </basic>

        <basic name="recipGivenNameChin">
            <column name="recip_given_name_chin" />
        </basic>

        <basic name="fgnProcNo">
            <column name="fgn_proc_no" />
        </basic>

        <basic name="recipSurnameChin">
            <column name="recip_surname_chin" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="servMode" fetch="LAZY">
        <join-column name="serv_mode_id" referenced-column-name="serv_mode_type_id" />
    </many-to-one>

    <many-to-one name="servSubMode" fetch="LAZY">
        <join-column name="serv_sub_mode_id" referenced-column-name="serv_sub_mode_type_id" />
    </many-to-one>

    <many-to-one name="recipPartcpRoleType" fetch="LAZY">
        <join-column name="recip_partcp_role_type_id" referenced-column-name="partcp_role_type_id" />
    </many-to-one>

    <many-to-one name="postOffice" fetch="LAZY">
        <join-column name="post_office_id" referenced-column-name="post_office_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="reqs" fetch="LAZY">
        <join-column name="reqs_id" referenced-column-name="reqs_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
