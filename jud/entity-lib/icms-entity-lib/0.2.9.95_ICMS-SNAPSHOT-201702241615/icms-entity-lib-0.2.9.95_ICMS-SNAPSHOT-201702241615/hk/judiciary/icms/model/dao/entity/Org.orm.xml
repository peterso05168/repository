<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.Org" access="FIELD">
     <table name="torg" />

     <attributes>
        <id name="orgId">
            <column name="org_id" />
            <generated-value strategy="TABLE" generator="TORG_SEQ" />
            <table-generator name="TORG_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="torg_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="orgName">
            <column name="org_name" />
        </basic>

        <basic name="orgNameChin">
            <column name="org_name_chin" />
        </basic>

        <basic name="telNo">
            <column name="tel_no" />
        </basic>

        <basic name="faxNo">
            <column name="fax_no" />
        </basic>

        <basic name="mobiNo">
            <column name="mobi_no" />
        </basic>

        <basic name="ctatPersonSurname">
            <column name="ctat_person_surname" />
        </basic>

        <basic name="ctatPersonGivenName">
            <column name="ctat_person_given_name" />
        </basic>

        <basic name="orgIdentNo">
            <column name="org_ident_no" />
        </basic>

        <basic name="maskNameChin">
            <column name="mask_name_chin" />
        </basic>

        <basic name="maskEffvStartDate">
            <column name="mask_effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="maskEffvEndDate">
            <column name="mask_effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="maskFlag">
            <column name="mask_flag" />
        </basic>

        <basic name="maskNameEng">
            <column name="mask_name_eng" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="extUserAc" fetch="LAZY">
        <join-column name="ext_user_ac_id" referenced-column-name="ext_user_ac_id" />
    </many-to-one>

    <many-to-one name="orgIdType" fetch="LAZY">
        <join-column name="org_id_type_id" referenced-column-name="org_id_type_id" />
    </many-to-one>

    <many-to-one name="langType" fetch="LAZY">
        <join-column name="lang_type_id" referenced-column-name="lang_type_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="partcp"  mapped-by="org" fetch="LAZY" />

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
