<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.JjoGrp" access="FIELD">
     <table name="cjjo_grp" />

     <attributes>
        <id name="jjoGrpId">
            <column name="jjo_grp_id" />
            <generated-value strategy="TABLE" generator="CJJO_GRP_SEQ" />
            <table-generator name="CJJO_GRP_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="cjjo_grp_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="jjoGrpName">
            <column name="jjo_grp_name" />
        </basic>

        <basic name="jjoGrpDesc">
            <column name="jjo_grp_desc" />
        </basic>

        <basic name="jjoGrpCd">
            <column name="jjo_grp_cd" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="activeFlag">
            <column name="active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="jjoGrpToCourtLvl"  mapped-by="jjoGrp" fetch="LAZY" />

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
