<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BlfTaskPartcp" access="FIELD">
     <table name="tblf_task_partcp" />

     <attributes>
        <id name="blfTaskPartcpId">
            <column name="blf_task_partcp_id" />
            <generated-value strategy="TABLE" generator="TBLF_TASK_PARTCP_SEQ" />
            <table-generator name="TBLF_TASK_PARTCP_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tblf_task_partcp_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="partcpPresFlag">
            <column name="partcp_pres_flag" />
        </basic>

        <basic name="partcpSurname">
            <column name="partcp_surname" />
        </basic>

        <basic name="partcpGivenName">
            <column name="partcp_given_name" />
        </basic>

        <basic name="partcpTelNo">
            <column name="partcp_tel_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="reqsPartcpRole" fetch="LAZY">
        <join-column name="reqs_partcp_role_id" referenced-column-name="blf_task_partcp_id" />
    </many-to-one>

    <many-to-one name="blfTaskRslt" fetch="LAZY">
        <join-column name="blf_task_rslt_id" referenced-column-name="blf_task_rslt_id" />
    </many-to-one>

    <many-to-one name="blfTaskPartcpType" fetch="LAZY">
        <join-column name="blf_task_partcp_type_id" referenced-column-name="task_partcp_type_id" />
    </many-to-one>

    <many-to-one name="lglFirm" fetch="LAZY">
        <join-column name="lgl_firm_id" referenced-column-name="lgl_firm_id" />
    </many-to-one>

    <many-to-one name="blfTaskSecuGuard" fetch="LAZY">
        <join-column name="blf_task_secu_guard_id" referenced-column-name="blf_task_secu_guard_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
