<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.WitnList" access="FIELD">
     <table name="twitn_list" />

     <attributes>
        <id name="witnId">
            <column name="witn_id" />
            <generated-value strategy="TABLE" generator="TWITN_LIST_SEQ" />
            <table-generator name="TWITN_LIST_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="twitn_list_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="witnWithDepFlag">
            <column name="witn_with_dep_flag" />
        </basic>

        <basic name="witnDepAmt">
            <column name="witn_dep_amt" />
        </basic>

        <basic name="subpoenaSummonToWitnFlag">
            <column name="subpoena_summon_to_witn_flag" />
        </basic>

        <basic name="surnameChin">
            <column name="surname_chin" />
        </basic>

        <basic name="status">
            <column name="status" />
        </basic>

        <basic name="givenName">
            <column name="given_name" />
        </basic>

        <basic name="surname">
            <column name="surname" />
        </basic>

        <basic name="givenNameChin">
            <column name="given_name_chin" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="partcpRole" fetch="LAZY">
        <join-column name="partcp_role_id" referenced-column-name="partcp_role_id" />
    </many-to-one>

    <many-to-one name="witnDepCurcy" fetch="LAZY">
        <join-column name="witn_dep_curcy_id" referenced-column-name="curcy_cd_id" />
    </many-to-one>

    <many-to-one name="vcase" fetch="LAZY">
        <join-column name="case_id" referenced-column-name="case_id" />
    </many-to-one>

    <many-to-one name="reqsPartcpRole" fetch="LAZY">
        <join-column name="reqs_partcp_role_id" referenced-column-name="partcp_role_id" />
    </many-to-one>

    <many-to-one name="subpoenaSummonToWitnDoc" fetch="LAZY">
        <join-column name="subpoena_summon_to_witn_doc_id" referenced-column-name="doc_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="hrnAssoWitn"  mapped-by="witn" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
