<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.SysInfCtrl" access="FIELD">
     <table name="tsys_inf_ctrl" />

     <attributes>
        <id name="sysInfCtrlId">
            <column name="sys_inf_ctrl_id" />
            <generated-value strategy="TABLE" generator="TSYS_INF_CTRL_SEQ" />
            <table-generator name="TSYS_INF_CTRL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tsys_inf_ctrl_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="key1">
            <column name="key1" />
        </basic>

        <basic name="key2">
            <column name="key2" />
        </basic>

        <basic name="key3">
            <column name="key3" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="sysInfCtrlType" fetch="LAZY">
        <join-column name="sys_inf_ctrl_type_id" referenced-column-name="sys_inf_ctrl_type_id" />
    </one-to-one>

    <one-to-one name="sysInfCtrlStatus" fetch="LAZY">
        <join-column name="sys_inf_ctrl_status_id" referenced-column-name="sys_inf_ctrl_status_id" />
    </one-to-one>

    <one-to-one name="caseType" fetch="LAZY">
        <join-column name="case_type_id" referenced-column-name="case_type_id" />
    </one-to-one>

    <one-to-one name="pd" fetch="LAZY">
        <join-column name="pd_id" referenced-column-name="pd_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
