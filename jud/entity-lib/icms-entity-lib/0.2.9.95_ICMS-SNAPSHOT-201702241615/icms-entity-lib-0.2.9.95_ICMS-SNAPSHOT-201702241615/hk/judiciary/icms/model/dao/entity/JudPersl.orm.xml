<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.JudPersl" access="FIELD">
     <table name="cjud_persl" />

     <attributes>
        <id name="judPersonId">
            <column name="jud_person_id" />
            <generated-value strategy="TABLE" generator="CJUD_PERSL_SEQ" />
            <table-generator name="CJUD_PERSL_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="cjud_persl_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="joinJudDate">
            <column name="join_jud_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="joinAsCivilServtDate">
            <column name="join_as_civil_servt_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="rankCd">
            <column name="rank_cd" />
        </basic>

        <basic name="pensStatusDesc">
            <column name="pens_status_desc" />
        </basic>

        <basic name="effvStartDate">
            <column name="effv_start_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="effvEndDate">
            <column name="effv_end_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="activeFlag">
            <column name="active_flag" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="empType" fetch="LAZY">
        <join-column name="emp_type_id" referenced-column-name="emp_type_id" />
    </many-to-one>

    <many-to-one name="humanResrc" fetch="LAZY">
        <join-column name="human_resrc_id" referenced-column-name="human_resrc_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
