<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.IrdClaim" access="FIELD">
     <table name="tird_claim" />

     <attributes>
        <id name="irdClaimId">
            <column name="ird_claim_id" />
            <generated-value strategy="TABLE" generator="TIRD_CLAIM_SEQ" />
            <table-generator name="TIRD_CLAIM_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tird_claim_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="dateFiling">
            <column name="date_filing" />
        </basic>

        <basic name="claimAmt">
            <column name="claim_amt" />
        </basic>

        <basic name="irdRefNo">
            <column name="ird_ref_no" />
        </basic>

        <basic name="claimTitleDeft">
            <column name="claim_title_deft" />
        </basic>

        <basic name="chinVer">
            <column name="chin_ver" />
        </basic>

        <basic name="caseType">
            <column name="case_type" />
        </basic>

        <basic name="actNo">
            <column name="act_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


