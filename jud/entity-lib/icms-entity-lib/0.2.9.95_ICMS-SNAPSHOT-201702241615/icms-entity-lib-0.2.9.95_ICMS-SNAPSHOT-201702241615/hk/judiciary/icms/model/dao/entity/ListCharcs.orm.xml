<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.ListCharcs" access="FIELD">
     <table name="tlist_charcs" />

     <attributes>
        <id name="listCharcsId">
            <column name="list_charcs_id" />
            <generated-value strategy="TABLE" generator="TLIST_CHARCS_SEQ" />
            <table-generator name="TLIST_CHARCS_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tlist_charcs_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="dayOfWeek">
            <column name="day_of_week" />
        </basic>

        <basic name="weekOfMonth">
            <column name="week_of_month" />
        </basic>

        <basic name="dayOfMonth">
            <column name="day_of_month" />
        </basic>

        <basic name="sessStartTime">
            <column name="sess_start_time" />
        </basic>

        <basic name="quota">
            <column name="quota" />
        </basic>

        <basic name="status">
            <column name="status" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="list" fetch="LAZY">
        <join-column name="list_id" referenced-column-name="list_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->
    <one-to-many name="pdListCharcs"  mapped-by="listCharcs" fetch="LAZY" />

<!-- Foreign key one-to-one -->

<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
