<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.BlfCaveatPartcp" access="FIELD">
     <table name="tblf_caveat_partcp" />

     <attributes>
        <id name="blfCaveatPartcpId">
            <column name="blf_caveat_partcp_id" />
            <generated-value strategy="TABLE" generator="TBLF_CAVEAT_PARTCP_SEQ" />
            <table-generator name="TBLF_CAVEAT_PARTCP_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tblf_caveat_partcp_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="solName">
            <column name="sol_name" />
        </basic>

        <basic name="telNo">
            <column name="tel_no" />
        </basic>

        <basic name="faxNo">
            <column name="fax_no" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->
    <many-to-one name="blfCaveat" fetch="LAZY">
        <join-column name="blf_caveat_id" referenced-column-name="blf_caveat_id" />
    </many-to-one>

    <many-to-one name="lglFirm" fetch="LAZY">
        <join-column name="lgl_firm_id" referenced-column-name="lgl_firm_id" />
    </many-to-one>

    <many-to-one name="partcp" fetch="LAZY">
        <join-column name="partcp_id" referenced-column-name="partcp_id" />
    </many-to-one>


<!-- Foreign key one-to-many -->

<!-- Foreign key one-to-one -->
    <one-to-one name="addr" fetch="LAZY">
        <join-column name="addr_id" referenced-column-name="addr_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
