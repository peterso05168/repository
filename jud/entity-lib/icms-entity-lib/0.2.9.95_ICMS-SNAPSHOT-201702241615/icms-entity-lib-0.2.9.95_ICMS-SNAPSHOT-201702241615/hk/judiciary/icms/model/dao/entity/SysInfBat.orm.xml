<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
                        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">
     <entity class="hk.judiciary.icms.model.dao.entity.SysInfBat" access="FIELD">
     <table name="tsys_inf_bat" />

     <attributes>
        <id name="sysInfBatId">
            <column name="sys_inf_bat_id" />
            <generated-value strategy="TABLE" generator="TSYS_INF_BAT_SEQ" />
            <table-generator name="TSYS_INF_BAT_SEQ" table="TFMK_SEQ_NO" 
                pk-column-name="seq_name" pk-column-value="tsys_inf_bat_id" 
                value-column-name="SEQ_CNT" allocation-size="1" />
        </id>

        <basic name="batSerNo">
            <column name="bat_ser_no" />
        </basic>

        <basic name="sysInfMsgVer">
            <column name="sys_inf_msg_ver" />
        </basic>

        <basic name="sysInfDate">
            <column name="sys_inf_date" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="recCnt">
            <column name="rec_cnt" />
        </basic>

        <basic name="procStartTime">
            <column name="proc_start_time" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="procEndTime">
            <column name="proc_end_time" />
            <temporal>TIMESTAMP</temporal>
        </basic>

        <basic name="filePath">
            <column name="file_path" />
        </basic>


        <version name="version">
            <column name="version_dt" />
        </version>


<!-- Foreign key many-to-one -->

<!-- Foreign key one-to-many -->
    <one-to-many name="sysInfErr"  mapped-by="sysInfBat" fetch="LAZY" />
    <one-to-many name="sysInfRec"  mapped-by="sysInfBat" fetch="LAZY" />

<!-- Foreign key one-to-one -->
    <one-to-one name="sysInfMsg" fetch="LAZY">
        <join-column name="sys_inf_msg_id" referenced-column-name="sys_inf_msg_id" />
    </one-to-one>

    <one-to-one name="pd" fetch="LAZY">
        <join-column name="pd_id" referenced-column-name="pd_id" />
    </one-to-one>

    <one-to-one name="sysInfStatus" fetch="LAZY">
        <join-column name="sys_inf_status_id" referenced-column-name="sys_inf_status_id" />
    </one-to-one>


<!-- Foreign key many-to-many -->
     </attributes>
     </entity>
</entity-mappings>
